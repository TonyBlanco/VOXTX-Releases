<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_toolbar"
        android:background="@drawable/dashboard_background"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:id="@+id/toolbar"
            android:background="#ff343d46"
            android:visibility="gone"
            android:fitsSystemWindows="true"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:minHeight="?attr/actionBarSize"
            android:layout_centerInParent="true"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="7dp"
                    android:text="@string/account_info"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@string/font_family_bold"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
        <RelativeLayout
            android:id="@+id/rl_settings"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">
            <ImageView
                android:id="@+id/logo"
                android:focusable="false"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:src="@drawable/logo_white_long"/>
            <TextView
                android:textSize="18sp"
                android:textColor="@color/light_gray"
                android:gravity="center"
                android:id="@+id/separator"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:text="|"
                android:layout_toEndOf="@+id/logo"/>
            <TextView
                android:textSize="18sp"
                android:textColor="@color/light_gray"
                android:gravity="center"
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:text="@string/settings_small"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/separator"/>
            <TextView
                android:textSize="18sp"
                android:textColor="@color/light_gray"
                android:gravity="center"
                android:id="@+id/separator_second"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:text="|"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/textView"/>
            <TextView
                android:textSize="18sp"
                android:textColor="@color/light_gray"
                android:gravity="center"
                android:id="@+id/textView_second"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:text="@string/stream_format"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/separator_second"/>
            <TextView
                android:textSize="22sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/date"/>
            <TextView
                android:textSize="14sp"
                android:textColor="#ffcccccc"
                android:gravity="center"
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:paddingEnd="30sp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:background="@color/colorAccent"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:background="#802a3543"
                    android:paddingBottom="67sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50sp"
                    android:layout_marginStart="280sp"
                    android:layout_marginEnd="280sp">
                    <RelativeLayout
                        android:id="@+id/rl_account_info"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:textSize="24sp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:text="@string/stream_format"
                            android:layout_centerHorizontal="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl_account_info">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <RadioGroup
                                android:id="@+id/rg_radio"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textDirection="locale">
                                <RadioButton
                                    android:textSize="18sp"
                                    android:textColor="@color/white"
                                    android:id="@+id/rb_default"
                                    android:tag="5"
                                    android:padding="10dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/default_"
                                    android:textDirection="locale"
                                    android:layout_marginStart="50dp"
                                    app:buttonTint="@color/white"/>
                                <RadioButton
                                    android:textSize="18sp"
                                    android:textColor="@color/white"
                                    android:id="@+id/rb_ts"
                                    android:tag="3"
                                    android:padding="10dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/mpegts_ts"
                                    android:textDirection="locale"
                                    android:layout_marginStart="50dp"
                                    app:buttonTint="@color/white"/>
                                <RadioButton
                                    android:textSize="18sp"
                                    android:textColor="@color/white"
                                    android:id="@+id/rb_m3u8"
                                    android:tag="4"
                                    android:padding="10dp"
                                    android:nextFocusDown="@+id/bt_save_changes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/hls_m3u8"
                                    android:textDirection="locale"
                                    android:layout_marginStart="50dp"
                                    app:buttonTint="@color/white"/>
                            </RadioGroup>
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="270dp"
                    android:layout_marginEnd="270dp">
                    <Button
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:id="@+id/bt_save_changes"
                        android:tag="1"
                        android:background="@drawable/black_button_dark"
                        android:padding="@dimen/_5sdp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:nextFocusUp="@+id/rb_m3u8"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_margin="20dp"
                        android:text="@string/save_changes"
                        android:layout_weight="1">
                        <requestFocus/>
                    </Button>
                    <Button
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:id="@+id/btn_back_playerselection"
                        android:tag="2"
                        android:background="@drawable/black_button_dark"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_margin="20dp"
                        android:text="@string/back_button"
                        android:layout_weight="1">
                        <requestFocus/>
                    </Button>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>
</LinearLayout>
