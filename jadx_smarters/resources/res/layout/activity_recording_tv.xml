<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="locale">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/dashboard_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutDirection="locale">
            <RelativeLayout
                android:id="@+id/rl_settings"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/iv_back_button"
                    android:background="@drawable/blur_lens_selector"
                    android:visibility="gone"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/hp_arrow_back"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"/>
                <ImageView
                    android:id="@+id/logo"
                    android:focusable="false"
                    android:layout_width="150dp"
                    android:layout_height="42dp"
                    android:src="@drawable/logo_white_long"/>
                <TextView
                    android:textSize="18sp"
                    android:textColor="@color/light_gray"
                    android:gravity="center"
                    android:id="@+id/separator"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:text="|"
                    android:textDirection="locale"
                    android:layout_toEndOf="@+id/logo"/>
                <TextView
                    android:textSize="18sp"
                    android:textColor="@color/light_gray"
                    android:gravity="center"
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:text="@string/recording_lable"
                    android:textDirection="locale"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/separator"/>
                <TextView
                    android:textSize="22sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textDirection="locale"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/date"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="#ffcccccc"
                    android:gravity="center"
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp"
                    android:textDirection="locale"
                    android:paddingEnd="30sp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layoutDirection="locale"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/rl_recording_dir_change"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:weightSum="2"
                    android:layoutDirection="locale"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="20dp">
                    <TextView
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:id="@+id/tv_recording_dir_change"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:text="@string/your_current_recording_path"
                        android:layout_weight="1.5"
                        android:textDirection="locale"
                        android:layout_marginEnd="145dp"/>
                    <Button
                        android:textSize="17sp"
                        android:textColor="@color/white"
                        android:id="@+id/bt_change"
                        android:tag="3"
                        android:background="@drawable/black_button_dark"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:visibility="visible"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:text="@string/change_dir"
                        android:layout_weight="0.42"
                        android:textDirection="locale"
                        android:layoutDirection="locale"
                        android:layout_marginStart="-140dp">
                        <requestFocus/>
                    </Button>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/my_recycler_view"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/rl_recording_dir_change"
                    android:layoutDirection="locale"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"/>
                <ProgressBar
                    android:id="@+id/pb_loader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:indeterminate="true"
                    android:layout_below="@+id/sliding_tabs"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:id="@+id/tv_no_record_found"
                    android:background="@drawable/selector_checkbox"
                    android:padding="10dp"
                    android:focusable="false"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="120dp"
                    android:text="@string/no_recording_found"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@string/font_family_thin"/>
                <TextView
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:id="@+id/tv_no_record_found_dontaskmeagain"
                    android:background="@drawable/selector_checkbox"
                    android:padding="10dp"
                    android:focusable="true"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="120dp"
                    android:text="@string/no_recording_found"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@string/font_family_thin"/>
            </RelativeLayout>
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>
</LinearLayout>
