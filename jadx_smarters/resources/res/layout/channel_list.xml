<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_list_view"
    android:background="@drawable/ripple_left_sidebar"
    android:layout_width="match_parent"
    android:layout_height="40dp">
    <TextView
        android:textSize="11sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="start"
        android:id="@+id/tv_channel_number"
        android:paddingBottom="2dp"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:src="@drawable/logo_placeholder_white"
        android:textAlignment="center"
        android:layout_marginStart="2dp"/>
    <ImageView
        android:id="@+id/tv_logo"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/logo_placeholder_white"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/ll_channel_and_program"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_channel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp">
                <ImageView
                    android:id="@+id/tv_currently_playing"
                    android:visibility="gone"
                    android:layout_width="17dp"
                    android:layout_height="39dp"
                    android:src="@drawable/player_play_newflow"
                    android:layout_marginStart="10dp"/>
                <TextView
                    android:textSize="13sp"
                    android:textColor="@color/live_sky_text"
                    android:ellipsize="marquee"
                    android:gravity="center_vertical"
                    android:id="@+id/list_view"
                    android:fadingEdge="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ll_program"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/live_sky_text"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_program_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="40dp"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="10dp">
                    <LinearLayout
                        android:layout_gravity="bottom"
                        android:orientation="vertical"
                        android:id="@+id/ll_pb_recent_watch"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:textDirection="locale"
                        android:layoutDirection="locale">
                        <ProgressBar
                            android:id="@+id/pb_recent_watch"
                            android:background="#a6706969"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:max="100"
                            android:indeterminate="false"
                            android:progressDrawable="@drawable/epgprogress"
                            android:minWidth="200dp"
                            android:minHeight="10dp"
                            style="?android:attr/progressBarStyleHorizontal"/>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true">
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_favourite"
                    android:visibility="invisible"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/fav_heart_red"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
