<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="locale">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_toolbar"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="locale">
        <androidx.appcompat.widget.Toolbar
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:id="@+id/toolbar"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:minHeight="?attr/actionBarSize"
            android:layout_centerInParent="true"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layoutDirection="locale">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/iv_back_button"
                    android:background="@drawable/blur_lens_selector"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/hp_arrow_back"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"/>
                <ImageView
                    android:id="@+id/logo"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:focusable="false"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/logo_white_long"
                    android:paddingStart="10dp"
                    android:layout_toEndOf="@+id/iv_back_button"/>
                <TextView
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:id="@+id/tv_cast_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:freezesText="true"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:fontFamily="@string/font_family_bold"
                    android:textDirection="locale"
                    android:paddingEnd="80dp"
                    android:layout_toEndOf="@+id/logo"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
        <RelativeLayout
            android:orientation="horizontal"
            android:id="@+id/rl_transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl_account_info"
                android:background="@color/colorAccent"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="locale"/>
            <ProgressBar
                android:theme="@style/whiteLoader"
                android:gravity="center"
                android:id="@+id/tv_detail_ProgressBar"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="63dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>
            <ScrollView
                android:id="@+id/scrollView"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layoutDirection="locale">
                    <LinearLayout
                        android:id="@+id/ll_person_info_box"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layoutDirection="locale"
                        android:layout_marginStart="55dp"
                        android:layout_marginEnd="55dp">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layoutDirection="locale">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="300dp"
                                android:weightSum="3"
                                android:layoutDirection="locale">
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:baselineAligned="false"
                                    android:weightSum="3.35"
                                    android:layoutDirection="locale">
                                    <LinearLayout
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.6"
                                        android:layoutDirection="locale">
                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layoutDirection="locale">
                                            <ImageView
                                                android:id="@+id/iv_movie_image"
                                                android:background="@drawable/rounded_edge_3"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:scaleType="fitXY"/>
                                        </RelativeLayout>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.8"
                                        android:layoutDirection="locale">
                                        <LinearLayout
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:weightSum="4"
                                            android:layoutDirection="locale">
                                            <LinearLayout
                                                android:id="@+id/ll_dob_box"
                                                android:layout_width="match_parent"
                                                android:layout_height="0dp"
                                                android:layout_weight="0.75"
                                                android:layoutDirection="locale">
                                                <TextView
                                                    android:textSize="20sp"
                                                    android:textStyle="bold"
                                                    android:textColor="@color/movie_info_text1"
                                                    android:ellipsize="marquee"
                                                    android:gravity="left"
                                                    android:id="@+id/tv_date_of_birth_heading"
                                                    android:paddingTop="1dp"
                                                    android:visibility="visible"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:text="@string/date_of_birth"
                                                    android:singleLine="true"
                                                    android:paddingStart="30dp"/>
                                            </LinearLayout>
                                            <LinearLayout
                                                android:id="@+id/ll_pob_box"
                                                android:layout_width="match_parent"
                                                android:layout_height="0dp"
                                                android:layout_weight="0.75"
                                                android:layoutDirection="locale">
                                                <TextView
                                                    android:textSize="20sp"
                                                    android:textStyle="bold"
                                                    android:textColor="@color/movie_info_text1"
                                                    android:ellipsize="marquee"
                                                    android:gravity="left"
                                                    android:id="@+id/tv_place_of_birth_heading"
                                                    android:paddingTop="1dp"
                                                    android:visibility="visible"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:text="@string/place_of_birth"
                                                    android:singleLine="true"
                                                    android:paddingStart="30dp"/>
                                            </LinearLayout>
                                            <LinearLayout
                                                android:id="@+id/ll_gender_box"
                                                android:layout_width="match_parent"
                                                android:layout_height="0dp"
                                                android:layout_weight="0.75"
                                                android:layoutDirection="locale">
                                                <TextView
                                                    android:textSize="20sp"
                                                    android:textStyle="bold"
                                                    android:textColor="@color/movie_info_text1"
                                                    android:ellipsize="marquee"
                                                    android:gravity="left"
                                                    android:id="@+id/tv_gender_heading"
                                                    android:paddingTop="1dp"
                                                    android:visibility="visible"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:text="@string/gender"
                                                    android:singleLine="true"
                                                    android:paddingStart="30dp"/>
                                            </LinearLayout>
                                            <LinearLayout
                                                android:id="@+id/ll_knownfor_box"
                                                android:layout_width="match_parent"
                                                android:layout_height="0dp"
                                                android:layout_weight="0.75"
                                                android:layoutDirection="locale">
                                                <TextView
                                                    android:textSize="20sp"
                                                    android:textStyle="bold"
                                                    android:textColor="@color/movie_info_text1"
                                                    android:ellipsize="marquee"
                                                    android:gravity="left"
                                                    android:id="@+id/tv_known_for_heading"
                                                    android:paddingTop="1dp"
                                                    android:visibility="visible"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:text="@string/known_for"
                                                    android:singleLine="true"
                                                    android:paddingStart="30dp"/>
                                            </LinearLayout>
                                            <LinearLayout
                                                android:id="@+id/ll_dod_box"
                                                android:visibility="gone"
                                                android:layout_width="match_parent"
                                                android:layout_height="0dp"
                                                android:layout_weight="0.75"
                                                android:layoutDirection="locale">
                                                <TextView
                                                    android:textSize="20sp"
                                                    android:textStyle="bold"
                                                    android:textColor="@color/movie_info_text1"
                                                    android:gravity="left"
                                                    android:id="@+id/tv_cast"
                                                    android:paddingTop="1dp"
                                                    android:visibility="visible"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:text="@string/date_of_death"
                                                    android:paddingStart="30dp"/>
                                            </LinearLayout>
                                        </LinearLayout>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1.95"
                                        android:layoutDirection="locale">
                                        <LinearLayout
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:weightSum="4">
                                            <LinearLayout
                                                android:id="@+id/ll_dob_box_info"
                                                android:layout_width="match_parent"
                                                android:layout_height="0dp"
                                                android:layout_weight="0.75"
                                                android:layoutDirection="locale"
                                                android:layout_marginStart="10dp">
                                                <TextView
                                                    android:textSize="20sp"
                                                    android:textColor="@color/movie_info_text1"
                                                    android:ellipsize="marquee"
                                                    android:gravity="left"
                                                    android:id="@+id/tv_date_of_birth"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:text="@string/N_A"
                                                    android:singleLine="true"/>
                                            </LinearLayout>
                                            <LinearLayout
                                                android:id="@+id/ll_pob_box_info"
                                                android:layout_width="match_parent"
                                                android:layout_height="0dp"
                                                android:layout_weight="0.75"
                                                android:layoutDirection="locale"
                                                android:layout_marginStart="10dp">
                                                <TextView
                                                    android:textSize="20sp"
                                                    android:textColor="@color/movie_info_text1"
                                                    android:ellipsize="marquee"
                                                    android:gravity="left"
                                                    android:id="@+id/tv_place_of_birth"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:text="@string/N_A"
                                                    android:singleLine="true"/>
                                            </LinearLayout>
                                            <LinearLayout
                                                android:id="@+id/ll_gender_box_info"
                                                android:layout_width="match_parent"
                                                android:layout_height="0dp"
                                                android:layout_weight="0.75"
                                                android:layoutDirection="locale"
                                                android:layout_marginStart="10dp">
                                                <TextView
                                                    android:textSize="20sp"
                                                    android:textColor="@color/movie_info_text1"
                                                    android:ellipsize="marquee"
                                                    android:gravity="left"
                                                    android:id="@+id/tv_gender"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:text="@string/N_A"
                                                    android:singleLine="true"/>
                                            </LinearLayout>
                                            <LinearLayout
                                                android:orientation="horizontal"
                                                android:id="@+id/ll_known_for_box_info"
                                                android:layout_width="match_parent"
                                                android:layout_height="0dp"
                                                android:layout_weight="0.75"
                                                android:layoutDirection="locale"
                                                android:layout_marginStart="10dp">
                                                <TextView
                                                    android:textSize="20sp"
                                                    android:textColor="@color/movie_info_text1"
                                                    android:ellipsize="marquee"
                                                    android:gravity="left"
                                                    android:id="@+id/tv_known_for"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:text="@string/N_A"
                                                    android:singleLine="true"/>
                                            </LinearLayout>
                                            <LinearLayout
                                                android:id="@+id/ll_dod_box_info"
                                                android:visibility="gone"
                                                android:layout_width="match_parent"
                                                android:layout_height="0dp"
                                                android:layout_weight="0.75"
                                                android:layoutDirection="locale"
                                                android:layout_marginStart="10dp">
                                                <RelativeLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:layoutDirection="locale">
                                                    <TextView
                                                        android:textSize="20sp"
                                                        android:textColor="@color/movie_info_text1"
                                                        android:gravity="left"
                                                        android:id="@+id/tv_dod_info"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="match_parent"
                                                        android:text="@string/N_A"
                                                        android:maxLines="3"/>
                                                </RelativeLayout>
                                            </LinearLayout>
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/description_box"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_person_info_box"
                        android:layoutDirection="locale"
                        android:layout_marginStart="55dp"
                        android:layout_marginEnd="55dp">
                        <TextView
                            android:textSize="20sp"
                            android:textColor="@color/series_info_text1"
                            android:id="@+id/tv_cast_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="20dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/description_box"
                        android:layout_marginStart="55dp"
                        android:layout_marginEnd="55dp">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_cast"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </RelativeLayout>
            </ScrollView>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_detail_ProgressBar"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_detail_left_side"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:layoutDirection="locale">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="5"
                    android:layoutDirection="locale"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_detail_right_side"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layoutDirection="locale">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="5"/>
            </LinearLayout>
        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>
</LinearLayout>
