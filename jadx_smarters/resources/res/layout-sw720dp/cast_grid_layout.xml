<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/rl_movie"
    android:background="@drawable/selector_vod_layout"
    android:layout_width="160dp"
    android:layout_height="215dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:paddingStart="5dp"
    android:paddingEnd="5dp">
    <RelativeLayout
        android:id="@+id/rl_movie_poster"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_movie_image"
            android:background="@drawable/rounded_edge_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/vod_text"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_cast_name"
            android:background="@drawable/player_footer_gradient"
            android:paddingTop="4dp"
            android:paddingBottom="5dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:maxLines="2"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:paddingStart="5dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"/>
    </RelativeLayout>
</RelativeLayout>
