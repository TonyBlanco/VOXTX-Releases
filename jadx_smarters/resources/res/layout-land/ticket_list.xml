<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/ll_outer"
    android:background="@drawable/selector_list_multidns"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="10dp"
    android:weightSum="8"
    android:layoutDirection="locale">
    <ImageView
        android:background="#84000000"
        android:padding="15dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="2"
        android:layoutDirection="locale"
        android:layout_marginStart="10dp"
        app:srcCompat="@drawable/ic_tickets"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:weightSum="4"
        android:layout_weight="6"
        android:layoutDirection="locale">
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:id="@+id/tv_department_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Support"
            android:maxLines="1"
            android:layout_weight="1.5"
            android:layoutDirection="locale"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layoutDirection="locale">
            <TextView
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/status"
                android:textDirection="locale"
                android:layoutDirection="locale"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"/>
            <TextView
                android:textSize="11sp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:id="@+id/tv_status_value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Customer-Reply"
                android:textDirection="locale"
                android:layoutDirection="locale"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:id="@+id/tv_last_updated"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/ticket_last_update"
                android:textDirection="locale"
                android:layoutDirection="locale"
                android:paddingStart="10dp"
                android:paddingEnd="2dp"/>
            <TextView
                android:textSize="11sp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:id="@+id/tv_last_updated_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="9/10/2018 12:19"
                android:maxLines="1"
                android:textDirection="locale"
                android:layoutDirection="locale"
                android:paddingEnd="3dp"
                app:autoSizeMaxTextSize="11sp"
                app:autoSizeMinTextSize="9sp"
                app:autoSizePresetSizes="@array/auto_size_new_dashbroad_6to12"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
