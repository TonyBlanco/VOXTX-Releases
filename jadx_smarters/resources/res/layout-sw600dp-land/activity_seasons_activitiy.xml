<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/main_layout"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_toolbar"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:id="@+id/toolbar"
            android:visibility="visible"
            android:fitsSystemWindows="true"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:minHeight="?attr/actionBarSize"
            android:layout_centerInParent="true"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/logo"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:focusable="false"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/logo_white_long"
                    android:paddingStart="10dp"/>
                <TextView
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:id="@+id/tv_settings"
                    android:fadingEdge="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/seasons"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:fontFamily="@string/font_family_bold"
                    android:paddingStart="10dp"
                    android:layout_toEndOf="@+id/logo"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
        <RelativeLayout
            android:id="@+id/rl_vod_layout"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/appbar_toolbar">
            <ProgressBar
                android:theme="@style/whiteLoader"
                android:id="@+id/pb_loader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:indeterminate="true"
                android:layout_centerHorizontal="true"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/my_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"/>
            <ProgressBar
                android:id="@+id/pb_paging_loader"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                style="?android:attr/progressBarStyleSmall"/>
            <TextView
                android:textSize="30dp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:id="@+id/empty_view"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="60dp"
                android:fontFamily="@string/font_family_thin"/>
            <ImageView
                android:id="@+id/iv_bt_up"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:src="@drawable/lb_ic_nav_arrow"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"/>
            <FrameLayout
                android:id="@+id/fl_frame"
                android:background="?android:attr/colorBackground"
                android:visibility="gone"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>
</LinearLayout>
