<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/shape_rounded_corners"
    android:layout_width="450dp"
    android:layout_height="200dp">
    <LinearLayout
        android:background="@color/Grey_100"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_gravity="start|center_vertical"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:src="@drawable/warning_icon"
            android:layout_marginStart="20dp"/>
        <TextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/trasparent_black"
            android:gravity="start|center_vertical"
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/no_internet"
            android:paddingStart="10dp"/>
    </LinearLayout>
    <TextView
        android:textSize="20sp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:text="@string/internet_error_new"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="6dp">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_yes_button_main_layout"
            android:background="@drawable/blue_btn_effect"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="3dp">
            <TextView
                android:textSize="15sp"
                android:textColor="@color/white"
                android:ellipsize="marquee"
                android:gravity="center"
                android:id="@+id/btn_try_again"
                android:tag="1"
                android:background="?android:attr/selectableItemBackground"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/try_again"
                android:singleLine="true"
                android:textAllCaps="true"
                android:fontFamily="@string/font_family_medium"
                android:textDirection="locale"
                android:layout_toEndOf="@+id/tv_watch_trailer"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_no_button_main_layout"
            android:background="@drawable/black_button_dark"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginStart="3dp">
            <TextView
                android:textSize="15sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/btn_close"
                android:tag="2"
                android:background="?android:attr/selectableItemBackground"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/close"
                android:textAllCaps="true"
                android:fontFamily="@string/font_family_medium"
                android:textDirection="locale"
                android:layout_toEndOf="@+id/tv_play"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
