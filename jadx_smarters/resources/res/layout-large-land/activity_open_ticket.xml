<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/dashboard_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="locale">
    <RelativeLayout
        android:id="@+id/rl_appbar"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layoutDirection="locale"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp">
        <ImageView
            android:id="@+id/logo"
            android:focusable="false"
            android:layout_width="150dp"
            android:layout_height="42dp"
            android:src="@drawable/logo_white_long"
            android:layoutDirection="locale"/>
        <TextView
            android:textSize="20sp"
            android:textColor="@color/light_gray"
            android:gravity="center"
            android:id="@+id/separator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:text="@string/my_ticket_open_ticket"
            android:textDirection="locale"
            android:layoutDirection="locale"
            android:layout_toEndOf="@+id/logo"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textDirection="locale"
            android:layoutDirection="locale"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/date"/>
        <TextView
            android:textSize="12sp"
            android:textColor="#ffcccccc"
            android:gravity="center"
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textDirection="locale"
            android:layoutDirection="locale"
            android:paddingEnd="30sp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="locale">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:background="#802a3543"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layoutDirection="locale"
                android:layout_marginStart="90dp"
                android:layout_marginEnd="90dp">
                <TextView
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/tv_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/fill_enquiry"
                    android:textDirection="locale"
                    android:layoutDirection="locale"/>
                <ImageView
                    android:id="@+id/iv_div"
                    android:background="@color/white"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layoutDirection="locale"/>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layoutDirection="locale">
                    <TextView
                        android:textSize="22sp"
                        android:textColor="@color/white"
                        android:id="@+id/tv_subject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="@string/subject"
                        android:textDirection="locale"
                        android:layoutDirection="locale"/>
                    <EditText
                        android:textColorHint="@color/black"
                        android:gravity="center_vertical"
                        android:id="@+id/et_subject_value"
                        android:background="@drawable/selector_login_fields"
                        android:focusable="true"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Enter subject"
                        android:maxLines="1"
                        android:inputType="text"
                        android:fontFamily="@string/font_family_regular"
                        android:textDirection="locale"
                        android:layoutDirection="locale"
                        android:paddingStart="25dp"
                        android:paddingEnd="15dp"/>
                    <TextView
                        android:textSize="22sp"
                        android:textColor="@color/white"
                        android:id="@+id/tv_departement"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/dept"
                        android:textDirection="locale"
                        android:layoutDirection="locale"/>
                    <Spinner
                        android:id="@+id/sp_department_value"
                        android:tag="4"
                        android:background="@drawable/selector_login_fields"
                        android:focusable="true"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="4dp"
                        android:spinnerMode="dropdown"
                        android:textDirection="locale"
                        android:layoutDirection="locale"
                        android:paddingStart="10dp"
                        android:paddingEnd="20dp"/>
                    <TextView
                        android:textSize="22sp"
                        android:textColor="@color/white"
                        android:id="@+id/tv_priority"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/priority"
                        android:textDirection="locale"
                        android:layoutDirection="locale"/>
                    <Spinner
                        android:textColor="@color/black"
                        android:entries="@array/priority_array"
                        android:id="@+id/sp_priority"
                        android:tag="4"
                        android:background="@drawable/selector_login_fields"
                        android:focusable="true"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="4dp"
                        android:spinnerMode="dropdown"
                        android:textDirection="locale"
                        android:layoutDirection="locale"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"/>
                    <TextView
                        android:textSize="22sp"
                        android:textColor="@color/white"
                        android:id="@+id/tv_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/message"
                        android:textDirection="locale"
                        android:layoutDirection="locale"/>
                    <EditText
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/black"
                        android:gravity="start"
                        android:id="@+id/et_message"
                        android:background="@drawable/selector_login_fields"
                        android:padding="10dp"
                        android:focusable="true"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_margin="5dp"
                        android:hint="@string/message_hint"
                        android:fontFamily="@string/font_family_regular"
                        android:textDirection="locale"
                        android:layoutDirection="locale"
                        android:paddingStart="10dp"/>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="20dp"
                        android:layoutDirection="locale">
                        <Button
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:id="@+id/bt_submit"
                            android:tag="1"
                            android:background="@drawable/black_button_dark"
                            android:focusable="true"
                            android:layout_width="150dp"
                            android:layout_height="70dp"
                            android:text="@string/submit_"
                            android:textDirection="locale"
                            android:layoutDirection="locale"/>
                        <Button
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:id="@+id/bt_close"
                            android:tag="2"
                            android:background="@drawable/black_button_dark"
                            android:focusable="true"
                            android:layout_width="150dp"
                            android:layout_height="70dp"
                            android:text="@string/back_button"
                            android:textDirection="locale"
                            android:layoutDirection="locale"
                            android:layout_marginStart="30dp"
                            android:layout_alignParentEnd="true"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
