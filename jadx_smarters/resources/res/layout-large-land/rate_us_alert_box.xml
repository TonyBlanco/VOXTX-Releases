<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:id="@+id/rl_Rateus"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                app:cardCornerRadius="8dp">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/ll_expandable"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:layout_gravity="center"
                        android:id="@+id/tv_parental_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rate_us_text"/>
                    <ImageView
                        android:id="@+id/iv_div"
                        android:background="@color/black"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="15dp"/>
                    <ImageView
                        android:id="@+id/ic_rateus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        app:srcCompat="@drawable/ic_ratingbar"/>
                    <TextView
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rate_us"
                        android:fontFamily="@string/font_family_medium"
                        android:paddingStart="40dp"
                        android:paddingEnd="40dp"/>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="40dp">
                        <Button
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:id="@+id/btn_rateus"
                            android:tag="1"
                            android:background="@drawable/black_button_dark"
                            android:focusable="true"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:text="@string/rate_us_text"
                            android:layout_marginStart="40dp"
                            android:layout_marginEnd="20dp"/>
                        <Button
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:id="@+id/btn_cancel"
                            android:tag="2"
                            android:background="@drawable/black_button_dark"
                            android:focusable="true"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:text="@string/remember_me_later"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="40dp"
                            android:layout_alignParentEnd="true"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
