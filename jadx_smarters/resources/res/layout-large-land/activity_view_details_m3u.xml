<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="locale">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_toolbar"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="locale">
        <androidx.appcompat.widget.Toolbar
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:id="@+id/toolbar"
            android:visibility="visible"
            android:fitsSystemWindows="true"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:minHeight="?attr/actionBarSize"
            android:layout_centerInParent="true"
            android:layoutDirection="locale"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layoutDirection="locale">
                <ImageView
                    android:id="@+id/logo"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:focusable="false"
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/logo_white_long"
                    android:paddingStart="10dp"/>
                <TextView
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/tv_account_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/movie_info"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@string/font_family_bold"
                    android:paddingStart="80dp"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
        <RelativeLayout
            android:orientation="horizontal"
            android:id="@+id/rl_transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl_account_info"
                android:background="@color/colorAccent"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="locale"/>
            <ScrollView
                android:id="@+id/scrollView"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layoutDirection="locale">
                    <LinearLayout
                        android:id="@+id/ll_movie_info_box"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layoutDirection="locale"
                        android:layout_marginStart="100dp"
                        android:layout_marginEnd="100dp">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layoutDirection="locale">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layoutDirection="locale">
                                <TextView
                                    android:textSize="22sp"
                                    android:textColor="@color/movie_info_text"
                                    android:gravity="center"
                                    android:id="@+id/tv_movie_name"
                                    android:background="#54000000"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:maxLines="2"
                                    android:textAlignment="center"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="300dp"
                                android:weightSum="3"
                                android:layoutDirection="locale">
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:baselineAligned="false"
                                    android:weightSum="3"
                                    android:layoutDirection="locale">
                                    <LinearLayout
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.75"
                                        android:layoutDirection="locale">
                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layoutDirection="locale"
                                            android:layout_marginEnd="10dp">
                                            <ImageView
                                                android:id="@+id/iv_movie_image"
                                                android:background="@drawable/noposter"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_marginTop="5dp"
                                                android:scaleType="fitXY"/>
                                            <ImageView
                                                android:id="@+id/iv_favourite"
                                                android:background="@drawable/selector_favourite_vod"
                                                android:layout_width="40dp"
                                                android:layout_height="40dp"
                                                android:layout_marginTop="10dp"
                                                android:src="@drawable/fav_heart_red"
                                                android:layout_marginEnd="1dp"
                                                android:layout_alignParentEnd="true"/>
                                        </RelativeLayout>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:id="@+id/ll_detail_left_side"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.6"
                                        android:layoutDirection="locale">
                                        <LinearLayout
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:weightSum="5"
                                            android:layoutDirection="locale">
                                            <LinearLayout
                                                android:id="@+id/ll_director_box"
                                                android:layout_width="match_parent"
                                                android:layout_height="0dp"
                                                android:layout_weight="0.8"
                                                android:layoutDirection="locale">
                                                <TextView
                                                    android:textSize="18sp"
                                                    android:textStyle="bold"
                                                    android:textColor="@color/movie_info_text1"
                                                    android:gravity="left"
                                                    android:id="@+id/tv_director"
                                                    android:paddingTop="1dp"
                                                    android:visibility="visible"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:text="@string/diected_by"
                                                    android:paddingStart="30dp"/>
                                            </LinearLayout>
                                            <LinearLayout
                                                android:id="@+id/ll_released_box"
                                                android:layout_width="match_parent"
                                                android:layout_height="0dp"
                                                android:layout_weight="0.8"
                                                android:layoutDirection="locale">
                                                <TextView
                                                    android:textSize="18sp"
                                                    android:textStyle="bold"
                                                    android:textColor="@color/movie_info_text1"
                                                    android:gravity="left"
                                                    android:id="@+id/tv_release_date"
                                                    android:paddingTop="1dp"
                                                    android:visibility="visible"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:text="@string/release_date"
                                                    android:paddingStart="30dp"/>
                                            </LinearLayout>
                                            <LinearLayout
                                                android:id="@+id/ll_duration_box"
                                                android:layout_width="match_parent"
                                                android:layout_height="0dp"
                                                android:layout_weight="0.8"
                                                android:layoutDirection="locale">
                                                <TextView
                                                    android:textSize="18sp"
                                                    android:textStyle="bold"
                                                    android:textColor="@color/movie_info_text1"
                                                    android:gravity="left"
                                                    android:id="@+id/tv_movie_duration"
                                                    android:paddingTop="1dp"
                                                    android:visibility="visible"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:text="@string/duration"
                                                    android:paddingStart="30dp"/>
                                            </LinearLayout>
                                            <LinearLayout
                                                android:id="@+id/ll_genre_box"
                                                android:layout_width="match_parent"
                                                android:layout_height="0dp"
                                                android:layout_weight="0.9"
                                                android:layoutDirection="locale">
                                                <TextView
                                                    android:textSize="18sp"
                                                    android:textStyle="bold"
                                                    android:textColor="@color/movie_info_text1"
                                                    android:gravity="left"
                                                    android:id="@+id/tv_movie_genere"
                                                    android:paddingTop="1dp"
                                                    android:visibility="visible"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:text="@string/genre1"
                                                    android:paddingStart="30dp"/>
                                            </LinearLayout>
                                            <LinearLayout
                                                android:id="@+id/ll_cast_box"
                                                android:layout_width="match_parent"
                                                android:layout_height="0dp"
                                                android:layout_weight="2"
                                                android:layoutDirection="locale">
                                                <TextView
                                                    android:textSize="18sp"
                                                    android:textStyle="bold"
                                                    android:textColor="@color/movie_info_text1"
                                                    android:gravity="left"
                                                    android:id="@+id/tv_cast"
                                                    android:paddingTop="1dp"
                                                    android:visibility="visible"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:text="@string/cast1"
                                                    android:paddingStart="30dp"/>
                                            </LinearLayout>
                                        </LinearLayout>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:id="@+id/ll_detail_ProgressBar"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="2">
                                        <ProgressBar
                                            android:theme="@style/whiteLoader"
                                            android:gravity="start"
                                            android:id="@+id/tv_detail_ProgressBar"
                                            android:layout_width="wrap_content"
                                            android:layout_height="30dp"
                                            android:layout_marginTop="63dp"
                                            android:layout_marginStart="20dp"
                                            android:layout_marginEnd="20dp"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:id="@+id/ll_detail_right_side"
                                        android:visibility="gone"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="2"
                                        android:layoutDirection="locale">
                                        <LinearLayout
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:weightSum="5">
                                            <LinearLayout
                                                android:id="@+id/ll_director_box_info"
                                                android:layout_width="match_parent"
                                                android:layout_height="0dp"
                                                android:layout_weight="0.8"
                                                android:layoutDirection="locale"
                                                android:layout_marginStart="10dp">
                                                <TextView
                                                    android:textSize="18sp"
                                                    android:textColor="@color/movie_info_text1"
                                                    android:gravity="left"
                                                    android:id="@+id/tv_director_info"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:text="N/A"
                                                    android:layout_marginEnd="100dp"/>
                                            </LinearLayout>
                                            <LinearLayout
                                                android:id="@+id/ll_released_box_info"
                                                android:layout_width="match_parent"
                                                android:layout_height="0dp"
                                                android:layout_weight="0.8"
                                                android:layoutDirection="locale"
                                                android:layout_marginStart="10dp">
                                                <TextView
                                                    android:textSize="18sp"
                                                    android:textColor="@color/movie_info_text1"
                                                    android:gravity="left"
                                                    android:id="@+id/tv_release_date_info"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:text="N/A"
                                                    android:layout_marginEnd="100dp"/>
                                            </LinearLayout>
                                            <LinearLayout
                                                android:id="@+id/ll_duration_box_info"
                                                android:layout_width="match_parent"
                                                android:layout_height="0dp"
                                                android:layout_weight="0.8"
                                                android:layoutDirection="locale"
                                                android:layout_marginStart="10dp">
                                                <TextView
                                                    android:textSize="18sp"
                                                    android:textColor="@color/movie_info_text1"
                                                    android:gravity="left"
                                                    android:id="@+id/tv_movie_duration_info"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:text="N/A"
                                                    android:layout_marginEnd="100dp"/>
                                            </LinearLayout>
                                            <LinearLayout
                                                android:orientation="horizontal"
                                                android:id="@+id/ll_genre_box_info"
                                                android:layout_width="match_parent"
                                                android:layout_height="0dp"
                                                android:layout_weight="0.9"
                                                android:layoutDirection="locale">
                                                <RelativeLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layoutDirection="locale"
                                                    android:layout_marginEnd="100dp">
                                                    <TextView
                                                        android:textSize="18sp"
                                                        android:textColor="@color/movie_info_text1"
                                                        android:gravity="left"
                                                        android:id="@+id/tv_genre_info"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:text="N/A"
                                                        android:maxLines="1"
                                                        android:layout_marginStart="10dp"/>
                                                    <TextView
                                                        android:textSize="18sp"
                                                        android:textStyle="bold"
                                                        android:textColor="@color/movie_info_text"
                                                        android:gravity="center"
                                                        android:id="@+id/tv_readmore_genre"
                                                        android:tag="4"
                                                        android:focusable="true"
                                                        android:visibility="invisible"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:text="@string/read_more"
                                                        android:layout_below="@+id/tv_genre_info"
                                                        android:fontFamily="@string/font_family_medium"
                                                        android:layout_marginStart="10dp"/>
                                                </RelativeLayout>
                                            </LinearLayout>
                                            <LinearLayout
                                                android:id="@+id/ll_cast_box_info"
                                                android:layout_width="match_parent"
                                                android:layout_height="0dp"
                                                android:layout_weight="2"
                                                android:layoutDirection="locale">
                                                <RelativeLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layoutDirection="locale"
                                                    android:layout_marginEnd="100dp">
                                                    <TextView
                                                        android:textSize="18sp"
                                                        android:textColor="@color/movie_info_text1"
                                                        android:gravity="left"
                                                        android:id="@+id/tv_cast_info"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:text="N/A"
                                                        android:maxLines="3"
                                                        android:layout_marginStart="10dp"/>
                                                    <TextView
                                                        android:textSize="18sp"
                                                        android:textStyle="bold"
                                                        android:textColor="@color/movie_info_text"
                                                        android:gravity="center"
                                                        android:id="@+id/tv_readmore"
                                                        android:tag="4"
                                                        android:focusable="true"
                                                        android:visibility="invisible"
                                                        android:nextFocusDown="@+id/tv_play"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:text="@string/read_more"
                                                        android:layout_below="@+id/tv_cast_info"
                                                        android:fontFamily="@string/font_family_medium"
                                                        android:layout_marginStart="10dp"/>
                                                </RelativeLayout>
                                            </LinearLayout>
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/rating_box"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layoutDirection="locale">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:weightSum="2"
                                    android:layoutDirection="locale">
                                    <LinearLayout
                                        android:gravity="center"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.5"
                                        android:layoutDirection="locale">
                                        <RatingBar
                                            android:theme="@style/RatingBar"
                                            android:id="@+id/rating"
                                            android:visibility="visible"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:numStars="5"
                                            android:stepSize="0.1"
                                            android:isIndicator="true"
                                            android:layout_marginEnd="10dp"
                                            style="?android:attr/ratingBarStyleSmall"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:gravity="center_vertical"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:weightSum="6"
                                        android:layout_weight="1.5"
                                        android:layoutDirection="locale">
                                        <TextView
                                            android:textSize="19sp"
                                            android:textColor="@color/white"
                                            android:gravity="center"
                                            android:id="@+id/tv_play"
                                            android:tag="1"
                                            android:background="@drawable/black_button_dark"
                                            android:focusable="true"
                                            android:focusableInTouchMode="true"
                                            android:nextFocusUp="@+id/tv_readmore"
                                            android:layout_width="0dp"
                                            android:layout_height="40dp"
                                            android:text="@string/nav_play"
                                            android:layout_weight="1.3"
                                            android:fontFamily="@string/font_family_medium"
                                            android:layout_marginStart="@dimen/_8dp">
                                            <requestFocus/>
                                        </TextView>
                                        <TextView
                                            android:textSize="17sp"
                                            android:textColor="@color/white"
                                            android:gravity="center"
                                            android:id="@+id/tv_watch_trailer"
                                            android:tag="5"
                                            android:background="@drawable/black_button_dark"
                                            android:focusable="true"
                                            android:focusableInTouchMode="true"
                                            android:visibility="gone"
                                            android:layout_width="0dp"
                                            android:layout_height="40dp"
                                            android:text="@string/watch_trailer"
                                            android:layout_weight="2"
                                            android:fontFamily="@string/font_family_medium"
                                            android:layout_marginStart="10dp"
                                            android:layout_toEndOf="@+id/tv_play">
                                            <requestFocus/>
                                        </TextView>
                                        <TextView
                                            android:textSize="19sp"
                                            android:textColor="@color/white"
                                            android:gravity="center"
                                            android:id="@+id/tv_add_to_fav"
                                            android:tag="2"
                                            android:background="@drawable/black_button_dark"
                                            android:focusable="true"
                                            android:focusableInTouchMode="true"
                                            android:layout_width="0dp"
                                            android:layout_height="40dp"
                                            android:text="@string/add_to_favourite"
                                            android:layout_weight="2.7"
                                            android:fontFamily="@string/font_family_medium"
                                            android:layout_marginStart="8dp"
                                            android:layout_marginEnd="10dp"
                                            android:layout_toEndOf="@+id/tv_watch_trailer">
                                            <requestFocus/>
                                        </TextView>
                                        <TextView
                                            android:textSize="14sp"
                                            android:textColor="@color/white"
                                            android:gravity="center"
                                            android:id="@+id/tv_detail_back_btn"
                                            android:tag="3"
                                            android:background="@drawable/blue_btn_effect"
                                            android:focusable="true"
                                            android:focusableInTouchMode="true"
                                            android:visibility="gone"
                                            android:layout_width="0dp"
                                            android:layout_height="40dp"
                                            android:text="@string/back_button"
                                            android:layout_weight="0.25"
                                            android:fontFamily="@string/font_family_medium"
                                            android:layout_toEndOf="@+id/tv_add_to_fav">
                                            <requestFocus/>
                                        </TextView>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_description"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="2"
                        android:layout_below="@+id/ll_movie_info_box"
                        android:layoutDirection="locale"
                        android:layout_marginStart="100dp"
                        android:layout_marginEnd="100dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.8">
                            <TextView
                                android:textSize="18sp"
                                android:textColor="@color/movie_info_text1"
                                android:id="@+id/tv_movie_info"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="20dp"
                                android:fontFamily="@string/font_family_medium"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2">
                            <ImageView
                                android:id="@+id/tmdb_logo"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:layout_width="65dp"
                                android:layout_height="65dp"
                                android:src="@drawable/tmdb"
                                android:paddingStart="10dp"/>
                            <ImageView
                                android:id="@+id/iv_download"
                                android:padding="5dp"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="20dp"
                                android:layout_alignParentEnd="true"
                                app:srcCompat="@drawable/ic_download"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/ll_description"
                        android:layout_marginStart="100dp"
                        android:layout_marginEnd="100dp">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_cast"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>
</LinearLayout>
