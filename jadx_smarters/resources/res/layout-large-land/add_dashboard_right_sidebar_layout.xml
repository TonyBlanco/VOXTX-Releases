<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="right"
    android:orientation="vertical"
    android:background="#ff1d232d"
    android:layout_width="300dp"
    android:layout_height="800dp"
    android:layout_margin="@dimen/_2sdp">
    <RelativeLayout
        android:id="@+id/ll_account_name_sidebar_singleuser"
        android:tag="1"
        android:background="@drawable/dashboard_sidebar_round_edges"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">
        <TextView
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:id="@+id/tv_account_name"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/logout_user"
            android:layout_toRightOf="@+id/switch_user_single"
            android:layout_marginStart="15dp"/>
        <ImageView
            android:id="@+id/switch_user_single"
            android:tag="7"
            android:padding="5dp"
            android:visibility="visible"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:src="@drawable/user_avatar"
            android:layout_marginEnd="0dp"/>
        <ImageView
            android:id="@+id/logout_user"
            android:tag="7"
            android:padding="5dp"
            android:visibility="visible"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logout_icon"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_account_name_sidebar"
        android:tag="1"
        android:background="@drawable/dashboard_sidebar_round_edges"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">
        <TextView
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:id="@+id/tv_account_name_sidebar"
            android:visibility="visible"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:layout_marginStart="15dp"/>
        <ImageView
            android:id="@+id/switch_user"
            android:tag="7"
            android:padding="5dp"
            android:visibility="visible"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:src="@drawable/user_avatar"
            android:layout_marginEnd="0dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:weightSum="2">
        <LinearLayout
            android:id="@+id/ll_settings_sidebar"
            android:tag="2"
            android:background="@drawable/dashboard_sidebar_round_edges"
            android:focusable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="5dp">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="15dp">
                <ImageView
                    android:tag="7"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/dashboard_sidebar_settings"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/dashboard_sidebar_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="@string/settings_small"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_account_info_sidebar"
            android:tag="3"
            android:background="@drawable/dashboard_sidebar_round_edges"
            android:paddingBottom="@dimen/_5sdp"
            android:focusable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="15dp">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="15dp">
                <ImageView
                    android:tag="7"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/dashboard_sidebar_account_info"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/dashboard_sidebar_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="@string/account_info_small"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/li_playlist"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:weightSum="2">
        <LinearLayout
            android:id="@+id/ll_switch_playlist_sidebar"
            android:tag="4"
            android:background="@drawable/dashboard_sidebar_round_edges"
            android:focusable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="5dp">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="15dp">
                <ImageView
                    android:tag="7"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/dashboard_sidebar_switch_user"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/dashboard_sidebar_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="@string/switch_user"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_add_playlist_sidebar"
            android:tag="5"
            android:background="@drawable/dashboard_sidebar_round_edges"
            android:focusable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="15dp">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="15dp">
                <ImageView
                    android:tag="7"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/dashboard_sidebar_add_user"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/dashboard_sidebar_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="@string/add_user"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/dashboard_sidebar_color"
        android:gravity="center"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/accouncement"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="1dp"/>
    <ImageView
        android:id="@+id/iv_divider"
        android:background="#4594989e"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"/>
    <com.cooltechworks.views.shimmer.ShimmerRecyclerView
        android:orientation="vertical"
        android:id="@+id/shimmer_recycler_view"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:shimmer_demo_layout="@layout/shimmer_layout"/>
    <TextView
        android:textSize="12sp"
        android:textColor="@color/dashboard_sidebar_color"
        android:layout_gravity="center_horizontal"
        android:id="@+id/no_announcement_found"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/no_accouncement_found"/>
</LinearLayout>
