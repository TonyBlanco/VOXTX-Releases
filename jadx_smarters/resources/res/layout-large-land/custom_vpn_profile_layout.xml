<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_outer"
    android:background="@drawable/selector_list_multidns"
    android:padding="5dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layoutDirection="locale"
    android:layout_marginStart="25dp"
    android:layout_marginEnd="20dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:baselineAligned="false"
        android:weightSum="1"
        android:layoutDirection="locale">
        <RelativeLayout
            android:id="@+id/testing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:layoutDirection="locale">
            <RelativeLayout
                android:id="@+id/rl_list_of_categories"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:layoutDirection="locale">
                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/iv_tv_icon"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layoutDirection="locale"
                    android:layout_marginStart="13dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/iv_profile_image"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_vpn"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:id="@+id/ll_user_server_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layoutDirection="locale"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_toEndOf="@+id/iv_tv_icon">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layoutDirection="locale"
                        android:layout_marginStart="15dp">
                        <TextView
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#ff051631"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:id="@+id/tv_profile_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Server Name"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:fontFamily="@string/font_family_regular"
                            android:textDirection="locale"
                            android:layout_marginEnd="20dp"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
