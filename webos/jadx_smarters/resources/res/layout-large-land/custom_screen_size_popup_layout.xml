<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/splash_new_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/logo_white_long"
            android:layout_marginStart="20dp"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/tv_movie_name"
            android:background="@drawable/shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:layout_marginBottom="20dp"
            android:textDirection="locale"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:layout_marginStart="120dp"
            android:layout_marginEnd="120dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="bottom|center_horizontal"
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:text="Device Option"/>
            </LinearLayout>
            <TextView
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:id="@+id/tv_device_type_is"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_type_msg_1"
                android:textAlignment="center"/>
            <TextView
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/device_type_msg_2"
                android:textAlignment="center"/>
            <RadioGroup
                android:id="@+id/rg_mobile_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50sp"
                android:layout_marginEnd="50sp">
                <RadioButton
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:id="@+id/rb_mobile"
                    android:tag="Mobile"
                    android:padding="10dp"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:checked="true"
                    android:text="@string/mobile_device"
                    android:layout_marginStart="50dp"
                    app:buttonTint="@color/white"/>
                <RadioButton
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:id="@+id/rb_tv"
                    android:tag="TV"
                    android:padding="10dp"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:checked="true"
                    android:text="@string/tv_device"
                    android:layout_marginStart="50dp"
                    app:buttonTint="@color/white"/>
            </RadioGroup>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/ll_yes_button_main_layout"
                    android:tag="3"
                    android:background="@drawable/login_btn_focused"
                    android:focusable="true"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp">
                    <TextView
                        android:textSize="22sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:id="@+id/btn_save"
                        android:tag="2"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:text="@string/save"
                        android:textAllCaps="true"
                        android:fontFamily="@string/font_family_medium"
                        android:textDirection="locale"
                        android:layout_toEndOf="@+id/tv_play"/>
                    <requestFocus/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
