<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/rl_movie"
    android:background="@drawable/selector_vod_layout"
    android:focusable="true"
    android:layout_width="wrap_content"
    android:layout_height="200dp">
    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardBackgroundColor="@color/trasparent_full"
        card_view:cardElevation="0dp"
        card_view:cardMaxElevation="0dp"
        card_view:cardUseCompatPadding="false">
        <RelativeLayout
            android:id="@+id/rl_movie_poster"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_movie_image"
                android:background="@drawable/rounded_edge_3"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="?android:attr/selectableItemBackground"
                android:scaleType="fitXY"/>
            <FrameLayout
                android:background="@drawable/shadow_from_top"
                android:layout_width="match_parent"
                android:layout_height="70dp"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:orientation="horizontal"
                    android:id="@+id/iv_play_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/hp_play_hover"/>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_rating"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginStart="3dp"
                android:layout_alignParentStart="true"
                card_view:cardBackgroundColor="@color/blue"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="0dp"
                card_view:cardMaxElevation="0dp"
                card_view:cardUseCompatPadding="false">
                <TextView
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/tv_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/vod_text"
                android:ellipsize="marquee"
                android:gravity="start"
                android:id="@+id/tv_season_and_episode"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:layout_toEndOf="@+id/cv_rating"/>
            <ImageView
                android:id="@+id/iv_favourite"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/fav_heart_red"
                android:layout_marginEnd="3dp"
                android:layout_alignParentEnd="true"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/vod_text"
                android:ellipsize="end"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_series_name"
                android:background="@drawable/player_footer_gradient"
                android:paddingTop="4dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:maxLines="2"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:paddingStart="5dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_gravity="bottom"
                    android:orientation="vertical"
                    android:id="@+id/ll_pb_recent_watch"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:textDirection="locale"
                    android:layoutDirection="locale">
                    <ProgressBar
                        android:id="@+id/pb_recent_watch"
                        android:background="#a6706969"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:max="100"
                        android:indeterminate="false"
                        android:progressDrawable="@drawable/recent_watch_progress"
                        android:minWidth="200dp"
                        android:minHeight="10dp"
                        style="?android:attr/progressBarStyleHorizontal"/>
                </LinearLayout>
            </FrameLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
