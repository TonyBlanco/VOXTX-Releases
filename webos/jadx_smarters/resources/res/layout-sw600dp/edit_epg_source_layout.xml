<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/shape_rounded_corners"
    android:layout_width="470dp"
    android:layout_height="wrap_content">
    <ScrollView
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/ll_expandable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:textSize="18sp"
                android:textColor="@color/black"
                android:id="@+id/tv_parental_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_epg_source"
                android:drawablePadding="7dp"
                android:layout_marginStart="25dp"/>
            <ImageView
                android:id="@+id/iv_div"
                android:background="@color/trasparent_light_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/tv_parental_password"/>
            <EditText
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textColorHint="@color/white"
                android:id="@+id/et_source_name"
                android:background="@drawable/selector_verify_password_fields"
                android:nextFocusDown="@+id/tv_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:hint="@string/enter_any_name_hint"
                android:layout_below="@+id/iv_div"
                android:imeOptions="flagNoExtractUi"
                android:fontFamily="@string/font_family_regular"
                android:textDirection="locale"
                android:paddingStart="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"/>
            <EditText
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textColorHint="@color/white"
                android:id="@+id/et_source_url"
                android:background="@drawable/selector_verify_password_fields"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:hint="@string/epg_source_link_example"
                android:layout_below="@+id/et_source_name"
                android:imeOptions="flagNoExtractUi"
                android:fontFamily="@string/font_family_regular"
                android:textDirection="locale"
                android:paddingStart="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"/>
            <LinearLayout
                android:id="@+id/ll_delete_default"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/et_source_url"
                android:layout_marginStart="30dp">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <androidx.appcompat.widget.SwitchCompat
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:id="@+id/switch_default"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textOn="ON"
                        android:textOff="OFF"
                        android:thumb="@drawable/custom_track_switch"
                        android:text="Default "
                        android:switchMinWidth="70dp"
                        app:track="@drawable/custom_thumb_switch"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="end"
                    android:background="?attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="30dp">
                    <LinearLayout
                        android:gravity="end"
                        android:id="@+id/ll_delete_source"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            android:src="@drawable/delete_user"/>
                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:id="@+id/tv_delete_source"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:text="Delete Source"
                            android:paddingEnd="10dp"
                            android:layout_marginStart="5dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_below="@+id/ll_delete_default">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/ll_no_button_main_layout"
                    android:background="@drawable/black_button_dark"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="3dp">
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:id="@+id/btn_close"
                        android:tag="1"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/close"
                        android:singleLine="true"
                        android:textAllCaps="true"
                        android:fontFamily="@string/font_family_medium"
                        android:textDirection="locale"
                        android:layout_toEndOf="@+id/tv_watch_trailer"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_yes_button_main_layout"
                    android:background="@drawable/blue_btn_effect"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp">
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:id="@+id/btn_save"
                        android:tag="2"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/save"
                        android:textAllCaps="true"
                        android:fontFamily="@string/font_family_medium"
                        android:textDirection="locale"
                        android:layout_toEndOf="@+id/tv_play"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
