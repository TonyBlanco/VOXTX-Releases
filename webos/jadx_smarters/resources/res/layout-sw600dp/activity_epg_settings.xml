<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_toolbar"
        android:background="@drawable/dashboard_background"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:id="@+id/toolbar"
            android:background="#ff343d46"
            android:visibility="gone"
            android:fitsSystemWindows="true"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:minHeight="?attr/actionBarSize"
            android:layout_centerInParent="true"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="7dp"
                    android:text="@string/account_info"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@string/font_family_bold"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
        <RelativeLayout
            android:id="@+id/rl_settings"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/iv_back_button"
                android:background="@drawable/blur_lens_selector"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:src="@drawable/hp_arrow_back"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"/>
            <ImageView
                android:id="@+id/logo"
                android:focusable="false"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:src="@drawable/logo_white_long"
                android:layout_toEndOf="@+id/iv_back_button"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/light_gray"
                android:gravity="center"
                android:id="@+id/separator"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="|"
                android:layout_toEndOf="@+id/logo"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/light_gray"
                android:gravity="center"
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/settings_small"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/separator"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/light_gray"
                android:gravity="center"
                android:id="@+id/separator_second"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="|"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/textView"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/light_gray"
                android:gravity="center"
                android:id="@+id/textView_second"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/epg"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/separator_second"/>
            <TextView
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/date"/>
            <TextView
                android:textSize="14sp"
                android:textColor="#ffcccccc"
                android:gravity="center"
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="#805c708a"
                    android:paddingTop="20dp"
                    android:paddingBottom="25dp"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:layout_marginStart="20dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <Button
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:id="@+id/bt_epg_sources"
                            android:tag="1"
                            android:background="@drawable/blue_btn_effect"
                            android:layout_width="200dp"
                            android:layout_height="50sp"
                            android:text="@string/epg_sources"/>
                        <LinearLayout
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginTop="2dp">
                            <TextView
                                android:textColor="#9affffff"
                                android:id="@+id/tv_epg_source_default"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textAlignment="center"
                                android:layout_marginStart="2sp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp">
                        <Button
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:id="@+id/bt_epg_timeline"
                            android:tag="1"
                            android:background="@drawable/black_button_dark"
                            android:focusable="true"
                            android:nextFocusUp="@+id/rb_mx_player"
                            android:layout_width="200dp"
                            android:layout_height="50sp"
                            android:text="@string/epg_timeline"
                            android:textAllCaps="true"/>
                        <LinearLayout
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginTop="2dp">
                            <TextView
                                android:textColor="#9affffff"
                                android:id="@+id/tv_epg_timeline_default"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textAlignment="center"
                                android:layout_marginStart="2sp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp">
                        <Button
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:id="@+id/bt_epg_timeshift"
                            android:tag="1"
                            android:background="@drawable/black_button_dark"
                            android:focusable="true"
                            android:nextFocusUp="@+id/rb_mx_player"
                            android:layout_width="200dp"
                            android:layout_height="50sp"
                            android:text="@string/epg_timeshift"/>
                        <LinearLayout
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginTop="2dp">
                            <TextView
                                android:textColor="#9affffff"
                                android:id="@+id/tv_epg_timeshift_default"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textAlignment="center"
                                android:layout_marginStart="2sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/ll_epg_sources"
                    android:background="#802a3543"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp">
                    <FrameLayout
                        android:background="#2a4c4c4c"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:layout_gravity="start|center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/epg_sources"
                            android:layout_marginStart="20dp"/>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:id="@+id/ll_refresh_epg"
                                android:padding="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toStartOf="@+id/ll_add_source">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:id="@+id/iv_refresh_btn"
                                    android:tag="7"
                                    android:focusable="false"
                                    android:layout_width="20sp"
                                    android:layout_height="20sp"
                                    android:layout_marginRight="3dp"
                                    android:src="@drawable/quantum_ic_refresh_white_24"/>
                                <TextView
                                    android:textSize="14sp"
                                    android:textColor="@color/white"
                                    android:gravity="center"
                                    android:visibility="visible"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/refresh_epg"
                                    android:textAllCaps="true"
                                    android:textDirection="locale"
                                    android:layout_marginEnd="5dp"
                                    android:layout_toEndOf="@+id/iv_refresh_btn"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:gravity="start|center_vertical"
                                android:layout_gravity="center_vertical"
                                android:id="@+id/ll_add_source"
                                android:background="@drawable/selector_tracks_layout"
                                android:padding="15dp"
                                android:focusable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true">
                                <FrameLayout
                                    android:visibility="visible"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp">
                                    <ImageView
                                        android:id="@+id/iv_add_more"
                                        android:tag="7"
                                        android:focusable="false"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_marginRight="25dp"
                                        android:src="@drawable/add_more_user"
                                        android:layout_marginEnd="20dp"/>
                                    <TextView
                                        android:textSize="16sp"
                                        android:textColor="@color/white"
                                        android:id="@+id/tv_add_user"
                                        android:visibility="visible"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/add_source"
                                        android:textAllCaps="true"
                                        android:textDirection="locale"
                                        android:layout_marginStart="25dp"
                                        android:layout_marginEnd="5dp"/>
                                    <FrameLayout
                                        android:id="@+id/epg_frame"
                                        android:background="#99000000"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>
                                    <ImageView
                                        android:layout_gravity="center"
                                        android:id="@+id/epg_locked"
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:src="@drawable/icon_lock_white"/>
                                </FrameLayout>
                            </RelativeLayout>
                        </RelativeLayout>
                    </FrameLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="25dp">
                            <androidx.recyclerview.widget.RecyclerView
                                android:orientation="horizontal"
                                android:id="@+id/rv_epg_sources"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layoutDirection="locale"/>
                            <TextView
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:id="@+id/tv_no_source_found"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:text="@string/no_source_found"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:gravity="center"
                            android:background="#2a4c4c4c"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginTop="-25dp">
                            <TextView
                                android:textSize="12sp"
                                android:textColor="#9affffff"
                                android:gravity="center"
                                android:id="@+id/tv_epg_found_for"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/epg_found_for_channels"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/ll_epg_timeline"
                    android:background="#80171e27"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp">
                    <LinearLayout
                        android:background="#2a4c4c4c"
                        android:padding="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/epg_timeline"
                            android:textAllCaps="true"/>
                    </LinearLayout>
                    <RadioGroup
                        android:id="@+id/rg_radio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">
                        <RadioButton
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:id="@+id/rb_withepg"
                            android:tag="3"
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/channels_with_epg"
                            android:layout_marginStart="40dp"
                            app:buttonTint="@color/white"/>
                        <RadioButton
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:id="@+id/rb_allchannels"
                            android:tag="4"
                            android:padding="10dp"
                            android:nextFocusDown="@+id/bt_save_changes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/all_channel"
                            android:layout_marginStart="40dp"
                            app:buttonTint="@color/white"/>
                    </RadioGroup>
                    <Button
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:id="@+id/bt_save_changes_timeline"
                        android:tag="1"
                        android:background="@drawable/button_hover_play"
                        android:layout_width="150sp"
                        android:layout_height="50sp"
                        android:layout_marginTop="15dp"
                        android:text="@string/save_changes"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/ll_epg_timeshift"
                    android:background="#80171e27"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp">
                    <LinearLayout
                        android:background="#2a4c4c4c"
                        android:padding="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/epg_timeshift"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:id="@+id/ll_timeshift"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp">
                        <Spinner
                            android:entries="@array/epg_time_shift_array"
                            android:id="@+id/spinner_epg"
                            android:tag="3"
                            android:background="@drawable/selector_login_fields"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:nextFocusDown="@+id/bt_save_changes"
                            android:layout_width="150sp"
                            android:layout_height="48sp"
                            android:prompt="@string/time_shift_prompt"
                            android:textAlignment="center"/>
                        <Button
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:id="@+id/bt_save_changes_time_shift"
                            android:tag="1"
                            android:background="@drawable/button_hover_play"
                            android:layout_width="150sp"
                            android:layout_height="50sp"
                            android:text="@string/save_changes"
                            android:layout_marginStart="15dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </com.google.android.material.appbar.AppBarLayout>
</LinearLayout>
