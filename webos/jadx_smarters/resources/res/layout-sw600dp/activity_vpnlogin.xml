<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dashboard_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_appbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="13dp"
        android:weightSum="3"
        android:layoutDirection="locale"
        android:paddingEnd="30dp"
        android:layout_marginStart="30dp">
        <ImageView
            android:id="@+id/iv_logo"
            android:background="@drawable/logo_white_long"
            android:layout_width="150dp"
            android:layout_height="42dp"/>
        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/tv_profile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_prof"
            android:layout_centerInParent="true"
            android:textAllCaps="true"
            android:textDirection="locale"
            android:layout_marginEnd="10dp"/>
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_appbar">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="#802a3543"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp">
            <TextView
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:id="@+id/tv_parental_password"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enter_your_certificate_details"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/username_p"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:weightSum="8"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp">
                <TextView
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:gravity="start|center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/username"
                    android:layout_weight="2"
                    android:fontFamily="@string/font_family_medium"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"/>
                <EditText
                    android:textColorHint="@color/white"
                    android:id="@+id/et_username"
                    android:tag="5"
                    android:background="@drawable/shape_login_fields"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_weight="5"
                    android:inputType="text"
                    android:textCursorDrawable="@drawable/cursor_drawable"
                    android:fontFamily="@string/font_family_regular"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/password_p"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:weightSum="8"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp">
                <TextView
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:gravity="start|center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/password"
                    android:layout_weight="2"
                    android:fontFamily="@string/font_family_medium"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"/>
                <EditText
                    android:textColorHint="@color/white"
                    android:id="@+id/et_password"
                    android:tag="5"
                    android:background="@drawable/shape_login_fields"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_weight="5"
                    android:inputType="textPassword"
                    android:textCursorDrawable="@drawable/cursor_drawable"
                    android:fontFamily="@string/font_family_regular"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:weightSum="8"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp">
                <TextView
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:gravity="start|center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/server"
                    android:layout_weight="2"
                    android:fontFamily="@string/font_family_medium"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="3.8">
                    <Spinner
                        android:id="@+id/spinner_server"
                        android:tag="4"
                        android:background="@drawable/shape_login_fields"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textDirection="locale"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"/>
                    <ImageView
                        android:id="@+id/iv_spinner_down"
                        android:layout_width="15dp"
                        android:layout_height="19dp"
                        android:src="@drawable/ic_down"
                        android:tint="@color/white"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/ll_import_certificate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.1"
                    android:layout_marginStart="3dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/iv_add_more"
                        android:tag="7"
                        android:paddingRight="5dp"
                        android:focusable="false"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/add_more_user"/>
                    <TextView
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:id="@+id/tv_add_user"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_crt"
                        android:textAllCaps="false"
                        android:textDirection="locale"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:weightSum="3"
                android:layout_marginEnd="4dp">
                <Button
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/btn_connect"
                    android:tag="1"
                    android:background="@drawable/logout_btn_effect"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:text="@string/save_connect"
                    android:layout_weight="0.9"/>
                <Button
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/btn_save"
                    android:tag="1"
                    android:background="@drawable/back_btn_effect"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:text="@string/save"
                    android:layout_weight="0.9"
                    android:layout_marginStart="20dp"/>
                <Button
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/btn_back"
                    android:tag="2"
                    android:background="@drawable/blue_btn_effect"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:text="@string/back_button"
                    android:layout_weight="0.9"
                    android:layout_marginStart="20dp"
                    android:layout_alignParentEnd="true"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
