<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/shape_rounded_corners"
    android:layout_width="380dp"
    android:layout_height="280dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="220dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="15dp">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="25dp"
                android:layout_height="35dp"
                android:src="@drawable/hp_sorting"/>
            <TextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/trasparent_black"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/sort_to"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fadeScrollbars="false">
            <RadioGroup
                android:id="@+id/rg_radio"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textDirection="locale">
                <RadioButton
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:id="@+id/rb_normal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:focusable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sort_default"
                    android:layout_marginStart="15dp"/>
                <RadioButton
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:id="@+id/rb_lastadded"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:focusable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sort_last_added"
                    android:layout_marginStart="15dp"/>
                <RadioButton
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:id="@+id/rb_atoz"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:focusable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sort_atoz"
                    android:layout_marginStart="15dp"/>
                <RadioButton
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:id="@+id/rb_ztoa"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:focusable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sort_ztoa"
                    android:layout_marginStart="15dp"/>
                <RadioButton
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:id="@+id/rb_channel_asc"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:focusable="true"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sort_channel_number_asc"
                    android:layout_marginStart="15dp"/>
                <RadioButton
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:id="@+id/rb_channel_desc"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:focusable="true"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sort_channel_number_decs"
                    android:layout_marginStart="15dp"/>
                <RadioButton
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:id="@+id/rb_top_rated"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:focusable="true"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sort_top_rated"
                    android:layout_marginStart="15dp"/>
            </RadioGroup>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_no_button_main_layout"
            android:background="@drawable/black_button_dark"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="3dp">
            <TextView
                android:textSize="15sp"
                android:textColor="@color/white"
                android:ellipsize="marquee"
                android:gravity="center"
                android:id="@+id/btn_no"
                android:tag="1"
                android:background="?android:attr/selectableItemBackground"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/close"
                android:singleLine="true"
                android:textAllCaps="true"
                android:fontFamily="@string/font_family_medium"
                android:textDirection="locale"
                android:layout_toEndOf="@+id/tv_watch_trailer"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_yes_button_main_layout"
            android:background="@drawable/blue_btn_effect"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginStart="3dp">
            <TextView
                android:textSize="15sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/btn_yes"
                android:tag="2"
                android:background="?android:attr/selectableItemBackground"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/save"
                android:textAllCaps="true"
                android:fontFamily="@string/font_family_medium"
                android:textDirection="locale"
                android:layout_toEndOf="@+id/tv_play"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
