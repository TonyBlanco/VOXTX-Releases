<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/dashboard_background"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="locale">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_background_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:background="#cc000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:weightSum="3"
                android:layoutDirection="locale"
                android:paddingEnd="30dp"
                android:layout_marginStart="30dp">
                <ImageView
                    android:id="@+id/iv_multiuser_logo"
                    android:padding="@dimen/_5sdp"
                    android:layout_width="220dp"
                    android:layout_height="62dp"
                    android:src="@drawable/logo_white_long"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="35dp"/>
            </RelativeLayout>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:id="@+id/tv_manageuser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose Your Playlist"
                android:textAllCaps="true"
                android:textDirection="locale"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/rl_recycler_view_container"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layoutDirection="locale"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintBottom_toTopOf="@+id/rl_list_options"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <ProgressBar
                        android:id="@+id/pb_loader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:indeterminate="true"
                        android:layout_centerHorizontal="true"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/my_recycler_view"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:clipToPadding="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layoutDirection="locale"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_list_options"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:id="@+id/tv_list_options"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/long_press_to_show_more"
                        android:textDirection="locale"/>
                    <LinearLayout
                        android:gravity="center"
                        android:id="@+id/ll_termsandservices"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_30sdp">
                        <TextView
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:id="@+id/tv_link"
                            android:background="#c0040313"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:text="@string/termsandservice"
                            android:textDirection="locale"/>
                        <TextView
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:id="@+id/tv_link2"
                            android:background="@drawable/selector_checkbox"
                            android:focusable="false"
                            android:visibility="visible"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:text="@string/termsandservice2"
                            android:layout_toRightOf="@+id/tv_link"
                            android:textDirection="locale"/>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
