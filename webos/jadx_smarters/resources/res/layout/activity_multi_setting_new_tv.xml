<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/dashboard_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_settings"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">
        <ImageView
            android:id="@+id/logo"
            android:focusable="false"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:src="@drawable/logo_white_long"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/light_gray"
            android:gravity="center"
            android:id="@+id/separator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="|"
            android:layout_toEndOf="@+id/logo"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/light_gray"
            android:gravity="center"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/settings_small"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/separator"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/light_gray"
            android:gravity="center"
            android:id="@+id/separator_second"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="|"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/textView"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/light_gray"
            android:gravity="center"
            android:id="@+id/textView_second"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/multi_settings"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/separator_second"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="#802a3543"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp">
        <TextView
            android:textSize="22sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="@string/choose_screen_layout"/>
        <CheckBox
            android:textSize="18sp"
            android:textColor="@color/white"
            android:id="@+id/show_popup"
            android:tag="4"
            android:background="@drawable/selector_tracks_layout"
            android:padding="10dp"
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_popup"
            android:layout_marginStart="40dp"
            app:buttonTint="@color/white"
            style="@style/checkBoxStyle">
            <requestFocus/>
        </CheckBox>
        <LinearLayout
            android:gravity="start|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_marginStart="40dp">
            <TextView
                android:textSize="21sp"
                android:textColor="@color/white"
                android:gravity="start|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choose_screen"
                android:layout_marginStart="5dp"/>
            <Button
                android:textSize="18sp"
                android:textColor="@color/white"
                android:id="@+id/btn_multi"
                android:tag="1"
                android:background="@drawable/black_button_dark"
                android:focusable="true"
                android:layout_width="250sp"
                android:layout_height="50dp"
                android:layout_margin="15dp"
                android:text="@string/select"/>
            <ImageView
                android:textSize="18sp"
                android:id="@+id/screen_pic"
                android:padding="9dp"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:src="@drawable/default_"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="150dp">
        <Button
            android:textSize="18sp"
            android:textColor="@color/white"
            android:id="@+id/save"
            android:tag="2"
            android:background="@drawable/black_button_dark"
            android:focusable="true"
            android:layout_width="0dp"
            android:layout_height="50sp"
            android:layout_margin="10dp"
            android:text="@string/save"
            android:layout_weight="1"/>
        <Button
            android:textSize="18sp"
            android:textColor="@color/white"
            android:id="@+id/back"
            android:tag="3"
            android:background="@drawable/black_button_dark"
            android:focusable="true"
            android:layout_width="0dp"
            android:layout_height="50sp"
            android:layout_margin="10dp"
            android:text="@string/back_button"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
