<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_notification"
    android:tag="1"
    android:focusable="true"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="locale"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="1dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:id="@+id/rl_notification"
        android:background="#802a3543"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="locale">
        <LinearLayout
            android:id="@+id/lv_titile_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layoutDirection="locale"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">
            <TextView
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:ellipsize="marquee"
                android:id="@+id/tv_message_header"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:fadingEdge="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Title"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:layout_weight="0.5"
                android:marqueeRepeatLimit="marquee_forever"
                android:textDirection="locale"
                android:layout_marginStart="20dp"/>
            <TextView
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="right"
                android:id="@+id/tv_created_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Created Date"
                android:layout_weight="0.5"
                android:textDirection="locale"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/notification_circle"
                android:tag="7"
                android:background="@drawable/blur_lens_selector"
                android:visibility="gone"
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:srcCompat="@drawable/notification_circle"/>
        </LinearLayout>
        <TextView
            android:textSize="10sp"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="message will give here and this will user to print the the important announcemnetn for clients"
            android:maxLines="3"
            android:layout_below="@+id/lv_titile_date"
            android:textDirection="locale"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>
        <ImageView
            android:id="@+id/iv_divider"
            android:background="@color/dark_gray_selector"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_message"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
