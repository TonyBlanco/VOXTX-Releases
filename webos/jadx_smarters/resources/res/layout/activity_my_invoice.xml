<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/dashboard_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="locale">
    <RelativeLayout
        android:id="@+id/rl_settings"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layoutDirection="locale"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">
        <ImageView
            android:id="@+id/logo"
            android:focusable="false"
            android:layout_width="150dp"
            android:layout_height="42dp"
            android:src="@drawable/logo_white_long"
            android:layoutDirection="locale"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/light_gray"
            android:gravity="center"
            android:id="@+id/separator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="|"
            android:textDirection="locale"
            android:layoutDirection="locale"
            android:layout_toEndOf="@+id/logo"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/light_gray"
            android:gravity="center"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/my_invoices"
            android:textDirection="locale"
            android:layoutDirection="locale"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/separator"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textDirection="locale"
            android:layoutDirection="locale"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/date"/>
        <TextView
            android:textSize="16sp"
            android:textColor="#ffcccccc"
            android:gravity="center"
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:textDirection="locale"
            android:layoutDirection="locale"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="30dp"
        android:weightSum="2"
        android:layoutDirection="locale"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:baselineAligned="false"
            android:weightSum="2"
            android:layout_weight="1"
            android:layoutDirection="locale">
            <LinearLayout
                android:id="@+id/paid"
                android:background="@drawable/paid_box"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:baselineAligned="false"
                android:layout_weight="1"
                android:layoutDirection="locale">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/gap_two"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:layoutDirection="locale"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:weightSum="4"
                    android:layout_weight="1.7"
                    android:layoutDirection="locale">
                    <RelativeLayout
                        android:gravity="start|center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:layoutDirection="locale">
                        <ImageView
                            android:id="@+id/loader_data"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/circle"
                            android:layoutDirection="locale"/>
                        <com.wang.avi.AVLoadingIndicatorView
                            android:id="@+id/loader_show"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="6dp"
                            android:layoutDirection="locale"
                            android:paddingStart="2sp"
                            android:paddingEnd="2dp"
                            app:indicatorColor="@color/paid_box_end"
                            app:indicatorName="BallPulseSyncIndicator"/>
                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/paid_box_end"
                            android:gravity="center"
                            android:id="@+id/sow_no"
                            android:visibility="gone"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="1"
                            android:textDirection="locale"
                            android:layoutDirection="locale"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:layoutDirection="locale">
                        <TextView
                            android:textSize="19sp"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/invoices_paid"
                            android:textDirection="locale"
                            android:layoutDirection="locale"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:layoutDirection="locale">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_paid"
                        android:textDirection="locale"
                        android:layoutDirection="locale"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:layoutDirection="locale"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/unpaid"
                android:background="@drawable/un_paid_box"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:baselineAligned="false"
                android:layout_weight="1"
                android:layoutDirection="locale">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/gap"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:layoutDirection="locale"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:weightSum="4"
                    android:layout_weight="1.7"
                    android:layoutDirection="locale">
                    <RelativeLayout
                        android:gravity="start|center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:layoutDirection="locale">
                        <ImageView
                            android:id="@+id/loader_unpaid"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/circle"
                            android:layoutDirection="locale"/>
                        <com.wang.avi.AVLoadingIndicatorView
                            android:id="@+id/loader_showup"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="6dp"
                            android:layoutDirection="locale"
                            android:paddingStart="2sp"
                            android:paddingEnd="2dp"
                            app:indicatorColor="@color/unpaid_box_end"
                            app:indicatorName="BallPulseSyncIndicator"/>
                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/unpaid_box_end"
                            android:gravity="center"
                            android:id="@+id/sow_up"
                            android:visibility="gone"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="1"
                            android:textDirection="locale"
                            android:layoutDirection="locale"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:layoutDirection="locale">
                        <TextView
                            android:textSize="19sp"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/invoices_unpaid"
                            android:textDirection="locale"
                            android:layoutDirection="locale"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:layoutDirection="locale">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_unpaid"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:layoutDirection="locale"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:baselineAligned="false"
            android:weightSum="2"
            android:layout_weight="1"
            android:layoutDirection="locale">
            <LinearLayout
                android:id="@+id/cancel"
                android:background="@drawable/cancel_box"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layoutDirection="locale">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/gap4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:layoutDirection="locale"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:weightSum="4"
                    android:layout_weight="1.7"
                    android:layoutDirection="locale">
                    <RelativeLayout
                        android:gravity="start|center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:layoutDirection="locale">
                        <ImageView
                            android:id="@+id/loader_cancel"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/circle"
                            android:layoutDirection="locale"/>
                        <com.wang.avi.AVLoadingIndicatorView
                            android:id="@+id/loader_showcnl"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="6dp"
                            android:layoutDirection="locale"
                            android:paddingStart="2sp"
                            android:paddingEnd="2dp"
                            app:indicatorColor="@color/cannel_box_end"
                            app:indicatorName="BallPulseSyncIndicator"/>
                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/cannel_box_end"
                            android:gravity="center"
                            android:id="@+id/sow_cnl"
                            android:visibility="gone"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="1"
                            android:layoutDirection="locale"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:layoutDirection="locale">
                        <TextView
                            android:textSize="19sp"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/my_service_cancelled"
                            android:textDirection="locale"
                            android:layoutDirection="locale"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:layoutDirection="locale">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_cencel"
                        android:layoutDirection="locale"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:layoutDirection="locale"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/refound"
                android:background="@drawable/refounded_box"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:baselineAligned="false"
                android:layout_weight="1"
                android:layoutDirection="locale">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/gap2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:layoutDirection="locale"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:weightSum="4"
                    android:layout_weight="1.7"
                    android:layoutDirection="locale">
                    <RelativeLayout
                        android:gravity="start|center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:layoutDirection="locale">
                        <ImageView
                            android:id="@+id/loader_refound"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/circle"
                            android:layoutDirection="locale"/>
                        <com.wang.avi.AVLoadingIndicatorView
                            android:id="@+id/loader_showrf"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="6dp"
                            android:layoutDirection="locale"
                            android:paddingStart="2sp"
                            android:paddingEnd="2dp"
                            app:indicatorColor="@color/refund_box_end"
                            app:indicatorName="BallPulseSyncIndicator"/>
                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/refund_box_end"
                            android:gravity="center"
                            android:id="@+id/sow_rf"
                            android:visibility="gone"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="1"
                            android:layoutDirection="locale"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2">
                        <TextView
                            android:textSize="19sp"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/refound"
                            android:layoutDirection="locale"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:layoutDirection="locale">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_refund"
                        android:textDirection="locale"
                        android:layoutDirection="locale"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:layoutDirection="locale"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
