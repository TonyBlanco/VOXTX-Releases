<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/rl_movie"
    android:background="@drawable/selector_vod_layout"
    android:layout_width="wrap_content"
    android:layout_height="170dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/trasparent_full"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:cardUseCompatPadding="false">
        <RelativeLayout
            android:id="@+id/rl_movie_poster"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_movie_image"
                android:background="@drawable/rounded_edge_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="?android:attr/selectableItemBackground"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/iv_recent_watch"
                android:visibility="gone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/recent_watch"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/iv_favourite"
                android:visibility="invisible"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/fav_heart_red"
                android:layout_marginEnd="3dp"
                android:layout_alignParentEnd="true"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_rating"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginStart="3dp"
                android:layout_alignParentStart="true"
                app:cardBackgroundColor="@color/blue"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp"
                app:cardUseCompatPadding="false">
                <TextView
                    android:textSize="11sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/tv_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:textSize="13sp"
                android:textColor="@color/vod_text"
                android:ellipsize="end"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_series_name"
                android:background="@drawable/player_footer_gradient"
                android:paddingTop="4dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:maxLines="2"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:paddingStart="5dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_gravity="end|center_vertical"
            android:id="@+id/ll_menu"
            android:visibility="gone"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true">
            <TextView
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="25dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_streamOptions"
                android:background="@drawable/selector_menu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="â‹®"
                android:layout_marginStart="5dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
