<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dashboard_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.skyfishjy.library.RippleBackground
        android:id="@+id/ripple_effect"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:rb_color="@color/white"
        app:rb_duration="5000"
        app:rb_radius="25dp"
        app:rb_rippleAmount="4"
        app:rb_scale="6">
        <view
            android:id="@+id/determinate"
            android:clickable="true"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/fab_vpn"
            android:max="100"
            android:indeterminate="true"
            android:layout_centerInParent="true"
            android:color="@color/black"
            app:fbb_autoStart="true"
            app:fbb_endBitmap="@drawable/ic_fab_complete"
            app:fbb_hideProgressOnComplete="true"
            app:fbb_progressColor="#ffffffff"
            app:fbb_progressWidthRatio="0.1"
            app:fbb_showEndBitmap="true"
            app:fbb_showShadow="true"
            class="mbanje.kurt.fabbutton.FabButton"/>
    </com.skyfishjy.library.RippleBackground>
    <RelativeLayout
        android:id="@+id/rl_appbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="13dp"
        android:weightSum="3"
        android:layoutDirection="locale"
        android:paddingEnd="30dp"
        android:layout_marginStart="30dp">
        <ImageView
            android:id="@+id/iv_logo"
            android:background="@drawable/logo_white_long"
            android:layout_width="120dp"
            android:layout_height="match_parent"/>
        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/tv_profile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vpn_status"
            android:layout_centerInParent="true"
            android:textAllCaps="true"
            android:textDirection="locale"
            android:layout_marginEnd="10dp"/>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/ll_manage_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/iv_add_more"
                android:tag="7"
                android:paddingRight="5dp"
                android:focusable="false"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/add_more_user"/>
            <TextView
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/tv_add_user"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/manage_prof"
                android:textAllCaps="true"
                android:textDirection="locale"
                android:layout_marginEnd="5dp"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_appbar">
        <RelativeLayout
            android:id="@+id/ll_connect_disconnect"
            android:background="@drawable/ripple_effect_vpn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp">
                    <LinearLayout
                        android:id="@+id/ll_status_connecting"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:textSize="20dp"
                            android:textColor="@color/white"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Status: "/>
                        <TextView
                            android:textSize="20dp"
                            android:textColor="@color/white"
                            android:gravity="center_vertical"
                            android:id="@+id/tv_touch_status"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textAllCaps="true"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_tab_to_connect"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:textSize="20dp"
                            android:textColor="@color/white"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/touch_connect"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                    <Button
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/btn_resume_pause"
                        android:tag="1"
                        android:background="@drawable/logout_btn_effect"
                        android:visibility="gone"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:text="@string/pause"/>
                    <Button
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/btn_home"
                        android:tag="2"
                        android:background="@drawable/blue_btn_effect"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:text="@string/menu_home"
                        android:layout_marginStart="20dp"
                        android:layout_alignParentEnd="true"/>
                    <Button
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/btn_back"
                        android:tag="1"
                        android:background="@drawable/logout_btn_effect"
                        android:visibility="visible"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:text="@string/back_button"
                        android:layout_marginStart="30dp"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
