<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:background="@drawable/splash_new_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/relLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_logo"
                android:padding="@dimen/_5sdp"
                android:layout_width="160dp"
                android:layout_height="45dp"
                android:src="@drawable/logo_white_long"
                android:layout_centerVertical="true"
                android:layout_marginStart="50dp"/>
            <TextView
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:paddingTop="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/logo_white_long"
                android:text="CHOOSE PLAYLIST TYPE"
                android:layout_centerInParent="true"
                android:textAllCaps="true"
                android:textAlignment="center"/>
        </RelativeLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/tv_movie_name"
            android:background="@drawable/shape"
            android:layout_width="match_parent"
            android:layout_height="425dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="40dp"
            android:layout_below="@+id/rel"
            android:layout_centerInParent="true"
            android:textDirection="locale"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:weightSum="2"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:layout_marginStart="7dp">
                    <RelativeLayout
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/rl_login_with_m3u"
                        android:tag="rl_login_with_m3u"
                        android:background="@drawable/card_box"
                        android:focusable="true"
                        android:layout_width="@dimen/_132sdp"
                        android:layout_height="@dimen/_65sdp">
                        <LinearLayout
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_2sdp">
                            <ImageView
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:id="@+id/iv_login_with_m3u"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/m3u_img"/>
                            <TextView
                                android:textSize="12sp"
                                android:textColor="@color/black"
                                android:ellipsize="marquee"
                                android:gravity="center"
                                android:id="@+id/tv_login_with_m3u"
                                android:focusable="true"
                                android:visibility="visible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/load_your_playlist_or_file_url"
                                android:singleLine="true"
                                android:layout_alignBottom="@+id/iv_login_with_m3u"
                                android:layout_centerInParent="true"
                                android:textAllCaps="true"/>
                            <ImageView
                                android:id="@+id/iv_login_with_m3u_arrow"
                                android:padding="3dp"
                                android:visibility="gone"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/black_arrow_right"
                                android:layout_marginEnd="5dp"
                                android:layout_alignParentEnd="true"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/rl_play_single_stream"
                        android:tag="rl_play_single_stream"
                        android:background="@drawable/card_box"
                        android:focusable="true"
                        android:layout_width="@dimen/_132sdp"
                        android:layout_height="@dimen/_65sdp"
                        android:layout_marginTop="25dp">
                        <LinearLayout
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_2sdp">
                            <ImageView
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:id="@+id/iv_play_single_stream"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/playnew"/>
                            <TextView
                                android:textSize="12sp"
                                android:textColor="@color/black"
                                android:ellipsize="marquee"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:id="@+id/tv_play_single_stream"
                                android:focusable="true"
                                android:visibility="visible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/play_single_stream"
                                android:singleLine="true"
                                android:textAllCaps="true"/>
                            <ImageView
                                android:id="@+id/iv_play_single_stream_arrow"
                                android:padding="3dp"
                                android:visibility="gone"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/black_arrow_right"
                                android:layout_marginEnd="5dp"
                                android:layout_alignParentEnd="true"/>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:weightSum="2"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:layout_marginStart="7dp">
                    <RelativeLayout
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/rl_login_with_xtream_codes_api"
                        android:tag="rl_login_with_xtream_codes_api"
                        android:background="@drawable/card_box"
                        android:focusable="true"
                        android:layout_width="@dimen/_132sdp"
                        android:layout_height="@dimen/_65sdp">
                        <LinearLayout
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_2sdp">
                            <ImageView
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:id="@+id/iv_login_with_xtream_codes_api"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/xtreme"/>
                            <TextView
                                android:textSize="12sp"
                                android:textColor="@color/black"
                                android:ellipsize="marquee"
                                android:gravity="center"
                                android:id="@+id/tv_login_with_xtream_codes_api"
                                android:focusable="true"
                                android:visibility="visible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/xtremecodes"
                                android:singleLine="true"
                                android:layout_alignBottom="@+id/iv_login_with_m3u"
                                android:layout_centerInParent="true"
                                android:textAllCaps="true"/>
                            <ImageView
                                android:id="@+id/iv_login_with_xtream_codes_api_arrow"
                                android:padding="3dp"
                                android:visibility="gone"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/black_arrow_right"
                                android:layout_marginEnd="5dp"
                                android:layout_alignParentEnd="true"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/rl_play_onestream"
                        android:tag="rl_play_onestream"
                        android:background="@drawable/card_box"
                        android:focusable="true"
                        android:layout_width="@dimen/_132sdp"
                        android:layout_height="@dimen/_65sdp"
                        android:layout_marginTop="25dp">
                        <LinearLayout
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_2sdp">
                            <ImageView
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:id="@+id/iv_play_onestream"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/onestream"/>
                            <TextView
                                android:textSize="12sp"
                                android:textColor="@color/black"
                                android:ellipsize="marquee"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:id="@+id/tv_play_onestream"
                                android:focusable="true"
                                android:visibility="visible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/onestream"
                                android:singleLine="true"
                                android:textAllCaps="true"
                                android:layout_toStartOf="@+id/iv_login_with_xtream_codes_api_arrow"
                                android:layout_toEndOf="@+id/iv_login_with_xtream_codes_api"/>
                            <ImageView
                                android:id="@+id/iv_play_onestreamarrow"
                                android:padding="3dp"
                                android:visibility="gone"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/black_arrow_right"
                                android:layout_marginEnd="5dp"
                                android:layout_alignParentEnd="true"/>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:weightSum="2"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:layout_marginStart="7dp">
                    <RelativeLayout
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/rl_play_from_device"
                        android:tag="rl_play_from_device"
                        android:background="@drawable/card_box"
                        android:focusable="true"
                        android:layout_width="@dimen/_132sdp"
                        android:layout_height="@dimen/_65sdp">
                        <LinearLayout
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_2sdp">
                            <ImageView
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:id="@+id/iv_play_from_device"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/local"/>
                            <TextView
                                android:textSize="12sp"
                                android:textStyle="normal"
                                android:textColor="@color/black"
                                android:ellipsize="marquee"
                                android:gravity="center"
                                android:id="@+id/tv_play_from_device"
                                android:focusable="true"
                                android:visibility="visible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/localaudio"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:layout_alignBottom="@+id/iv_login_with_m3u"
                                android:layout_centerInParent="true"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:textAllCaps="true"/>
                            <ImageView
                                android:id="@+id/iv_play_from_device_arrow"
                                android:padding="3dp"
                                android:visibility="gone"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/black_arrow_right"
                                android:layout_marginEnd="5dp"
                                android:layout_alignParentEnd="true"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/rl_login_with_stalker"
                        android:tag="rl_login_with_stalker"
                        android:background="@drawable/card_box"
                        android:focusable="true"
                        android:layout_width="@dimen/_132sdp"
                        android:layout_height="@dimen/_65sdp"
                        android:layout_marginTop="25dp">
                        <LinearLayout
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_2sdp">
                            <ImageView
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:id="@+id/iv_login_with_staker"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/stalker"/>
                            <TextView
                                android:textSize="12sp"
                                android:textColor="@color/black"
                                android:ellipsize="marquee"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:id="@+id/tv_login_with_staker"
                                android:focusable="true"
                                android:visibility="visible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/stalkerportal"
                                android:singleLine="true"
                                android:textAllCaps="true"
                                android:layout_toStartOf="@+id/iv_login_with_xtream_codes_api_arrow"
                                android:layout_toEndOf="@+id/iv_login_with_xtream_codes_api"/>
                            <ImageView
                                android:id="@+id/iv_login_with_staker_arrow"
                                android:padding="3dp"
                                android:visibility="gone"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/black_arrow_right"
                                android:layout_marginEnd="5dp"
                                android:layout_alignParentEnd="true"/>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/rl_list_users"
                android:tag="rl_list_users"
                android:background="@drawable/list_grade"
                android:focusable="true"
                android:nextFocusLeft="@+id/rl_play_single_stream"
                android:nextFocusRight="@+id/rl_login_with_stalker"
                android:nextFocusUp="@+id/rl_play_onestream"
                android:layout_width="@dimen/_132sdp"
                android:layout_height="@dimen/_34sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginTop="15dp">
                <ImageView
                    android:id="@+id/iv_list_users"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/list"
                    android:layout_marginStart="10dp"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:id="@+id/tv_list_users"
                    android:focusable="true"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/list_users"
                    android:singleLine="true"
                    android:layout_centerHorizontal="true"
                    android:textAllCaps="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="2dp"
                    android:layout_toStartOf="@+id/iv_list_users_arrow"
                    android:layout_toEndOf="@+id/iv_list_users"/>
                <ImageView
                    android:id="@+id/iv_list_users_arrow"
                    android:padding="3dp"
                    android:visibility="visible"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/rightarrow"
                    android:layout_marginEnd="5dp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_alignParentBottom="true">
            <TextView
                android:textSize="12sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/tv_link"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="@string/termsandservice"
                android:textDirection="locale"/>
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/tv_link2"
                android:background="@drawable/selector_checkbox"
                android:focusable="true"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="@string/termsandservice2"
                android:layout_toRightOf="@+id/tv_link"
                android:textDirection="locale"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
