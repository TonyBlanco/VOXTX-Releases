<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/rl_password_prompt"
    android:background="#de12161e"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="40dp"
                app:cardMaxElevation="10dp"
                app:cardUseCompatPadding="true">
                <RelativeLayout
                    android:background="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/ll_expandable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">
                        <TextView
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:id="@+id/tv_backup_pin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/set_pin"
                            android:drawablePadding="7dp"
                            android:layout_marginStart="25dp"
                            app:drawableStartCompat="@drawable/parental_password_lock"/>
                        <ImageView
                            android:id="@+id/iv_div"
                            android:background="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="15dp"
                            android:layout_below="@+id/tv_backup_pin"/>
                        <EditText
                            android:textColorHint="@color/white"
                            android:id="@+id/et_pin"
                            android:background="@drawable/selector_verify_password_fields"
                            android:focusable="true"
                            android:nextFocusDown="@+id/bt_save_pin"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="10dp"
                            android:hint="@string/enter_your_pin_1"
                            android:layout_below="@+id/iv_div"
                            android:inputType="numberPassword"
                            android:fontFamily="@string/font_family_regular"
                            android:textDirection="locale"
                            android:paddingStart="10dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="30dp">
                            <requestFocus/>
                        </EditText>
                        <TextView
                            android:textSize="18sp"
                            android:id="@+id/tv_pin_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_below="@+id/et_pin"
                            android:layout_marginStart="35dp"
                            android:layout_marginEnd="35dp"/>
                        <Button
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:id="@+id/bt_save_pin"
                            android:tag="8"
                            android:background="@drawable/black_button_dark"
                            android:focusable="true"
                            android:nextFocusRight="@+id/bt_close"
                            android:nextFocusUp="@+id/et_pin"
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="20dp"
                            android:text="@string/set_ok"
                            android:layout_below="@+id/tv_pin_desc"
                            android:layout_marginStart="40dp"/>
                        <Button
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:id="@+id/bt_close"
                            android:tag="9"
                            android:background="@drawable/black_button_dark"
                            android:focusable="true"
                            android:nextFocusLeft="@+id/bt_save_pin"
                            android:nextFocusUp="@+id/et_pin"
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="20dp"
                            android:text="@string/close"
                            android:layout_below="@+id/tv_pin_desc"
                            android:layout_marginEnd="40dp"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
