<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/screenPopup"
    android:background="@color/trasparent_full"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="locale">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/trasparent_light"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="60dp"
        android:weightSum="1">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="3"
            android:layout_weight="0.12">
            <TextView
                android:textSize="22sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/choose_screen"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="3"
            android:layout_weight="0.42">
            <ImageView
                android:id="@+id/deafult"
                android:background="@drawable/selector_checkbox"
                android:padding="10dp"
                android:focusable="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:src="@drawable/default_"
                android:layout_weight="0.9"/>
            <requestFocus/>
            <ImageView
                android:id="@+id/screen1"
                android:background="@drawable/selector_checkbox"
                android:padding="10dp"
                android:focusable="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:src="@drawable/screen1"
                android:layout_weight="0.9"/>
            <ImageView
                android:id="@+id/screen2"
                android:background="@drawable/selector_checkbox"
                android:padding="10dp"
                android:focusable="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:src="@drawable/screen2"
                android:layout_weight="0.9"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="3"
            android:layout_weight="0.42">
            <ImageView
                android:id="@+id/screen3"
                android:background="@drawable/selector_checkbox"
                android:padding="10dp"
                android:focusable="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:src="@drawable/screen3"
                android:layout_weight="0.9"/>
            <ImageView
                android:id="@+id/screen4"
                android:background="@drawable/selector_checkbox"
                android:padding="10dp"
                android:focusable="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:src="@drawable/screen4"
                android:layout_weight="0.9"/>
            <ImageView
                android:id="@+id/screen5"
                android:background="@drawable/selector_checkbox"
                android:padding="10dp"
                android:focusable="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:src="@drawable/screen5"
                android:layout_weight="0.9"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
