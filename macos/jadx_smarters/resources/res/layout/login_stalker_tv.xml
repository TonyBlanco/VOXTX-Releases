<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/activity_login"
    android:background="@drawable/splash_new_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:layoutDirection="locale">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:layout_weight="0.44"
        android:layoutDirection="locale">
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="0sp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/logo_white_long"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:layout_marginStart="20dp"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/white"
            android:gravity="bottom|center_horizontal"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:text="@string/refresh_dns"
            android:layout_weight="0.2"/>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_weight="0.4"
            android:layout_marginStart="20dp">
            <RelativeLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/rl_connect_vpn"
                android:tag="rl_connect_vpn"
                android:background="@drawable/login_btn_unfocused"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp">
                <ImageView
                    android:id="@+id/iv_connect_vpn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="3dp"
                    android:src="@drawable/login_icon1_unfocused"
                    android:layout_marginStart="15dp"/>
                <TextView
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:ellipsize="marquee"
                    android:gravity="start"
                    android:id="@+id/tv_vpn_con"
                    android:focusable="true"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="CONNECT VPN"
                    android:singleLine="true"
                    android:textAllCaps="true"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="2dp"
                    android:layout_toEndOf="@+id/iv_connect_vpn"/>
            </RelativeLayout>
            <RelativeLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/rl_list_users"
                android:tag="rl_list_users"
                android:background="@drawable/login_btn_unfocused"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp">
                <ImageView
                    android:id="@+id/iv_list_users"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="3dp"
                    android:src="@drawable/login_icon2_unfocused"
                    android:layout_marginStart="15dp"/>
                <TextView
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:ellipsize="marquee"
                    android:gravity="start"
                    android:id="@+id/tv_list_users"
                    android:focusable="true"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="@string/list_users"
                    android:singleLine="true"
                    android:textAllCaps="true"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="2dp"
                    android:layout_toEndOf="@+id/iv_list_users"/>
            </RelativeLayout>
        </LinearLayout>
        <Button
            android:textSize="12sp"
            android:layout_gravity="center"
            android:id="@+id/rl_bt_refresh"
            android:background="@drawable/selector_button"
            android:focusable="true"
            android:visibility="gone"
            android:layout_width="110dp"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:text="@string/refresh_dns_button"
            android:layout_weight="0.18"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>
        <Button
            android:layout_gravity="center"
            android:id="@+id/btn_free_trail"
            android:background="@drawable/selector_button"
            android:visibility="gone"
            android:layout_width="140sp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:text="@string/get_a_free_trail"
            android:layout_weight="0.3"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linearlayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:weightSum="6"
        android:layout_weight="0.6">
        <TextView
            android:textSize="27sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_enter_credentials"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:text="@string/credential_detail"
            android:layout_weight="0.8"
            android:layout_toRightOf="@+id/iv_logo"
            android:fontFamily="sans-serif"/>
        <RelativeLayout
            android:id="@+id/rl_name"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:layout_weight="0.8"/>
        <RelativeLayout
            android:id="@+id/rl_server_url"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:layout_weight="0.8"/>
        <RelativeLayout
            android:id="@+id/rl_mac_addess"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:layout_weight="0.8"/>
        <RelativeLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/rl_bt_submit"
            android:tag="rl_bt_submit"
            android:background="@drawable/box_unfocused"
            android:focusable="true"
            android:nextFocusLeft="@+id/rl_list_users"
            android:nextFocusDown="@+id/rl_bt_submit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.8"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp">
            <TextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:ellipsize="marquee"
                android:gravity="center"
                android:id="@+id/tv_add_user"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login_user"
                android:singleLine="true"
                android:textAllCaps="true"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="2dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_view_log"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:layout_weight="0.96"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/login_text"
            android:gravity="center"
            android:id="@+id/link_transform"
            android:background="@drawable/selector_checkbox"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/with_act_code"
            android:drawablePadding="1sp"
            android:layout_weight="0.1"
            android:layout_marginStart="50dp"/>
    </LinearLayout>
</LinearLayout>
