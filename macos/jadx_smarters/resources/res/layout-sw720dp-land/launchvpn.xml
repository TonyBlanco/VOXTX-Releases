<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/dashboard_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_appbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="13dp"
        android:weightSum="3"
        android:layoutDirection="locale"
        android:paddingEnd="30dp"
        android:layout_marginStart="30dp">
        <ImageView
            android:id="@+id/iv_logo"
            android:background="@drawable/logo_white_long"
            android:layout_width="150dp"
            android:layout_height="42dp"/>
        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/tv_profile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VPN Status"
            android:layout_centerInParent="true"
            android:textAllCaps="true"
            android:textDirection="locale"
            android:layout_marginEnd="10dp"/>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/ll_manage_profile"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/iv_add_more"
                android:tag="7"
                android:paddingRight="5dp"
                android:focusable="false"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/add_more_user"/>
            <TextView
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/tv_add_user"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage Profile"
                android:textAllCaps="true"
                android:textDirection="locale"
                android:layout_marginEnd="5dp"/>
        </LinearLayout>
    </RelativeLayout>
    <ProgressBar
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleLarge"/>
</FrameLayout>
