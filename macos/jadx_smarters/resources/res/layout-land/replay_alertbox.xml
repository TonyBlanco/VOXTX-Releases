<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ll_expandable"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14dp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:id="@+id/tv_name_content"
                android:padding="10dp"
                android:paddingLeft="10dp"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Reply"
                android:fontFamily="@string/font_family_regular"
                android:paddingStart="10dp"/>
            <View
                android:background="#21000000"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <EditText
                android:textSize="15sp"
                android:gravity="start"
                android:id="@+id/et_message"
                android:background="@drawable/edit_text_rounded_background"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:hint="@string/message_hint"
                android:fontFamily="@string/font_family_regular"
                android:paddingStart="10dp"/>
            <View
                android:background="#21000000"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:weightSum="2.6"
                android:layout_below="@+id/et_message">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"/>
                <Button
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:id="@+id/btn_send"
                    android:background="@drawable/logout_btn_effect"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/send"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"/>
                <Button
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:id="@+id/bt_cancel_reply"
                    android:background="@drawable/back_btn_effect"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
