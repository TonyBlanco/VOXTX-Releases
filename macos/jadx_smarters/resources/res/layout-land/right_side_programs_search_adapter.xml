<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_list_view"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/ll_channel_and_program"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_channel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="13sp"
                    android:textColor="@color/live_sky_text"
                    android:ellipsize="marquee"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_program_title"
                    android:fadingEdge="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_program"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/white_trasparent"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_program_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:layout_marginStart="10dp"/>
                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/white_trasparent"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_program_stop_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollHorizontally="true"
                    android:singleLine="true"/>
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/ll_pb_recent_watch"
                    android:visibility="gone"
                    android:layout_width="50dp"
                    android:layout_height="2dp"
                    android:textDirection="locale"
                    android:layoutDirection="locale"
                    android:layout_marginStart="10dp">
                    <ProgressBar
                        android:id="@+id/pb_recent_watch"
                        android:background="#a6706969"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:max="100"
                        android:indeterminate="false"
                        android:progressDrawable="@drawable/epgprogress"
                        android:minWidth="100dp"
                        android:minHeight="10dp"
                        style="?android:attr/progressBarStyleHorizontal"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
