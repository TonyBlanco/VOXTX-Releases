<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dashboard_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_settings"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:src="@drawable/logo_white_long"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/light_gray"
            android:gravity="center"
            android:id="@+id/separator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:text="|"
            android:layout_toEndOf="@+id/logo"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/light_gray"
            android:gravity="center"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:text="@string/settings_small"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/separator"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/light_gray"
            android:gravity="center"
            android:id="@+id/separator_second"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:text="|"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/textView"/>
        <TextView
            android:textSize="15sp"
            android:textColor="@color/light_gray"
            android:gravity="center"
            android:id="@+id/textView_second"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:text="VPN"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/separator_second"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:id="@+id/time"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/date"/>
        <TextView
            android:textSize="14sp"
            android:textColor="#ffcccccc"
            android:gravity="center"
            android:id="@+id/date"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:paddingEnd="30dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_settings">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="#802a3543"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp">
            <TextView
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:id="@+id/tv_parental_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_crt_file"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/rl_playlist_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5"
                android:layout_marginStart="10dp">
                <TextView
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_playlist_type"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/crt_type"
                    android:layout_weight="1.2"
                    android:fontFamily="@string/font_family_medium"
                    android:layout_marginStart="5dp"/>
                <RadioGroup
                    android:orientation="horizontal"
                    android:id="@+id/rg_radio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:layout_marginStart="0dp">
                    <RadioButton
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:id="@+id/rb_url"
                        android:tag="3"
                        android:background="@drawable/selector_checkbox"
                        android:padding="10dp"
                        android:focusable="true"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:checked="true"
                        android:text="URL"
                        android:onClick="onRadioButtonClicked"
                        android:layout_marginStart="50dp"
                        app:buttonTint="@color/white"/>
                    <RadioButton
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:id="@+id/rb_file"
                        android:tag="3"
                        android:background="@drawable/selector_checkbox"
                        android:padding="10dp"
                        android:focusable="true"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/file"
                        android:onClick="onRadioButtonClicked"
                        app:buttonTint="@color/white"/>
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/rl_browse"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5"
                android:layout_marginStart="10dp">
                <TextView
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:gravity="start|center_vertical"
                    android:id="@+id/file_or_url"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:text="@string/crt_file"
                    android:layout_weight="1.2"
                    android:fontFamily="@string/font_family_medium"
                    android:layout_marginStart="5dp"/>
                <Button
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:id="@+id/bt_browse"
                    android:tag="3"
                    android:background="@drawable/black_button_dark"
                    android:focusable="true"
                    android:visibility="visible"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="0dp"
                    android:text="@string/browse"
                    android:layout_weight="1"
                    android:layout_marginStart="26dp"/>
                <TextView
                    android:textColor="@color/white"
                    android:id="@+id/tv_browse_error"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:id="@+id/tv_file_path"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/ll_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:weightSum="8"
                android:layout_marginStart="10dp">
                <TextView
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:gravity="start|center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/crt_url"
                    android:layout_weight="2"
                    android:fontFamily="@string/font_family_medium"
                    android:layout_marginStart="5dp"/>
                <EditText
                    android:textColorHint="@color/white"
                    android:id="@+id/et_certificate"
                    android:tag="5"
                    android:background="@drawable/selector_login_fields"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:nextFocusDown="@+id/btn_import"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="http://yourserver.com/certificate.zip"
                    android:maxLines="1"
                    android:layout_weight="5.5"
                    android:inputType="text"
                    android:textCursorDrawable="@drawable/cursor_drawable"
                    android:fontFamily="@string/font_family_regular"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"/>
                <ImageView
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:weightSum="5">
                <Button
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/btn_import"
                    android:tag="1"
                    android:background="@drawable/black_button_dark"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:text="@string/import_"
                    android:layout_weight="1.2"/>
                <Button
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/btn_back"
                    android:tag="2"
                    android:background="@drawable/black_button_dark"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:text="@string/back_button"
                    android:layout_weight="1.2"
                    android:layout_marginStart="30dp"
                    android:layout_alignParentEnd="true"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
